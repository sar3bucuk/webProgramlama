                        <div class="appointments-table-card">
                            @if (pastAppointments != null && pastAppointments.Any())
                            {
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Tarih</th>
                                            <th>Saat</th>
                                            <th>√úye</th>
                                            <th>Spor Salonu</th>
                                            <th>Hizmet</th>
