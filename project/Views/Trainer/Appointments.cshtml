<!-- Notlar Modal -->
<div class="modal fade" id="notesModal" tabindex="-1" aria-labelledby="notesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="notesModalLabel">Randevu Notlarƒ±</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>√úye:</strong> <span id="notesMemberName"></span></p>
                <p><strong>Notlar:</strong></p>
                <p id="notesContent" style="white-space: pre-wrap;"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script>
    function updateStatus(appointmentId, status) {
        const statusNames = {
            'Pending': 'beklemede',
            'Approved': 'onaylandƒ±',
            'Rejected': 'reddedildi',
            'Completed': 'tamamlandƒ±',
            'Cancelled': 'iptal edildi'
        };
        
        if (!confirm(`Randevu durumunu "${statusNames[status] || status}" olarak g√ºncellemek istediƒüinizden emin misiniz?`)) {
            return;
        }

        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
        
        if (!token) {
            alert('G√ºvenlik token\'ƒ± bulunamadƒ±. Sayfayƒ± yenileyip tekrar deneyin.');
            return;
        }

        fetch('@Url.Action("UpdateAppointmentStatus", "Trainer")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': token
            },
            body: new URLSearchParams({
                id: appointmentId,
                status: status,
                __RequestVerificationToken: token
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert(data.message || 'Durum g√ºncellenirken bir hata olu≈ütu.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Bir hata olu≈ütu.');
        });
    }

    // Notlar modal i√ßin
    document.addEventListener('DOMContentLoaded', function() {
        const notesModal = document.getElementById('notesModal');
        if (notesModal) {
            notesModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const notes = button.getAttribute('data-notes');
                const member = button.getAttribute('data-member');
                
                document.getElementById('notesContent').textContent = notes || 'Not bulunmamaktadƒ±r.';
                document.getElementById('notesMemberName').textContent = member || '-';
            });
        }
    });
</script>

