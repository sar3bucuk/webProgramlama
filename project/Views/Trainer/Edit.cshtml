@model proje.Models.Trainer
@{
    ViewData["Title"] = "Bilgilerimi Düzenle";
    Layout = "_Layout";
    var services = ViewBag.Services as IEnumerable<proje.Models.Service> ?? new List<proje.Models.Service>();
}

<div class="auth-page-modern">
    <div class="auth-stars-background"></div>
    <div class="auth-container-modern" style="max-width: 1200px;">
        <div class="auth-card-modern admin-dashboard-card">
            <div class="auth-header-modern">
                <div class="d-flex justify-content-end align-items-center mb-3">
                    <a href="@Url.Action("Index", "Trainer")" class="btn btn-outline-secondary back-btn-edit">
                        <i class="bi bi-arrow-left"></i> Geri Dön
                    </a>
                </div>
                <h2 class="auth-title-modern">Bilgilerimi Düzenle</h2>
                <p class="auth-subtitle-modern">Kişisel bilgilerinizi güncelleyin</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="Edit" method="post" class="auth-form-modern" id="editTrainerForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="GymId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group-modern">
                    <label asp-for="FirstName" class="form-label-modern">Ad</label>
                    <input asp-for="FirstName" class="form-control-modern" placeholder="Örn: Ahmet" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="LastName" class="form-label-modern">Soyad</label>
                    <input asp-for="LastName" class="form-control-modern" placeholder="Örn: Yılmaz" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-modern">
                            <label asp-for="Phone" class="form-label-modern">Telefon</label>
                            <input asp-for="Phone" class="form-control-modern" placeholder="Örn: 0264 123 45 67" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Email" class="form-label-modern">E-posta</label>
                    <input asp-for="Email" type="email" class="form-control-modern" placeholder="Örn: ahmet@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <label class="form-label-modern">Spor Salonu</label>
                    <input type="text" class="form-control-modern" value="@(Model.Gym?.Name ?? "Henüz atanmamış")" readonly />
                    <small class="text-muted">Spor salonu değişikliği için admin ile iletişime geçin.</small>
                </div>

                <div class="form-group-modern">
                    <label asp-for="ExperienceYears" class="form-label-modern">Deneyim Yılı</label>
                    <input asp-for="ExperienceYears" type="number" class="form-control-modern" min="0" />
                    <span asp-validation-for="ExperienceYears" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Bio" class="form-label-modern">Biyografi</label>
                    <textarea asp-for="Bio" class="form-control-modern" rows="4" placeholder="Hakkınızda bilgi yazın..."></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group-modern form-check-modern">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input-modern" />
                    <label asp-for="IsActive" class="form-check-label-modern">Aktif</label>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>

                <div class="form-actions-modern">
                    <a href="@Url.Action("Index", "Trainer")" class="btn-auth-modern btn-secondary-modern">İptal</a>
                    <button type="submit" class="btn-auth-modern">Güncelle</button>
                </div>
            </form>

            <!-- Şifre Değiştirme Bölümü -->
            <div class="password-section">
                <div class="services-header">
                    <h3>Şifre Değiştir</h3>
                </div>
                <form id="changePasswordForm">
                    @Html.AntiForgeryToken()
                    <div class="form-group-modern">
                        <label class="form-label-modern">Mevcut Şifre</label>
                        <input type="password" id="currentPassword" class="form-control-modern" required />
                    </div>
                    <div class="form-group-modern">
                        <label class="form-label-modern">Yeni Şifre</label>
                        <input type="password" id="newPassword" class="form-control-modern" required minlength="6" />
                        <small class="text-muted">En az 6 karakter olmalıdır.</small>
                    </div>
                    <div class="form-group-modern">
                        <label class="form-label-modern">Yeni Şifre (Tekrar)</label>
                        <input type="password" id="confirmPassword" class="form-control-modern" required minlength="6" />
                    </div>
                    <button type="button" class="btn btn-primary" onclick="changePassword()">Şifreyi Değiştir</button>
                </form>
            </div>

            <!-- Hizmetler Bölümü -->
            <div class="services-section">
                <div class="services-header">
                    <h3>Verdiğim Hizmetler</h3>
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addTrainerServiceModal">
                        <span>+</span> Yeni Hizmet Ekle
                    </button>
                </div>

                <div class="services-list">
                    @if (Model.TrainerServices != null && Model.TrainerServices.Any())
                    {
                        @foreach (var trainerService in Model.TrainerServices)
                        {
                            <div class="service-item" data-trainer-service-id="@trainerService.Id">
                                <div class="service-info">
                                    <h5>@trainerService.Service?.Name</h5>
                                </div>
                                <div class="service-actions">
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteTrainerServiceModal"
                                            data-trainer-service-id="@trainerService.Id"
                                            data-service-name="@trainerService.Service?.Name">
                                        Sil
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Henüz hizmet eklenmemiş.</p>
                    }
                </div>
            </div>

            <!-- Çalışma Saatleri Bölümü -->
            <div class="availability-section">
                <div class="services-header">
                    <h3>Çalışma Saatlerim</h3>
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addAvailabilityModal">
                        <span>+</span> Yeni Saat Ekle
                    </button>
                </div>

                <div class="availability-list">
                    @if (Model.TrainerAvailabilities != null && Model.TrainerAvailabilities.Any())
                    {
                        @foreach (var availability in Model.TrainerAvailabilities.OrderBy(a => a.DayOfWeek))
                        {
                            <div class="availability-item">
                                <div class="availability-info">
                                    <h5>@availability.DayName</h5>
                                    <p>@availability.StartTime.ToString(@"hh\:mm") - @availability.EndTime.ToString(@"hh\:mm")</p>
                                    @if (!availability.IsAvailable)
                                    {
                                        <span class="badge bg-secondary">Müsait Değil</span>
                                    }
                                </div>
                                <div class="availability-actions">
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteAvailabilityModal"
                                            data-availability-id="@availability.Id"
                                            data-day-name="@availability.DayName">
                                        Sil
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Henüz çalışma saati eklenmemiş.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modals - auth-card-modern dışında -->
<!-- Hizmet Ekleme Modal -->
<div class="modal fade" id="addTrainerServiceModal" tabindex="-1" aria-labelledby="addTrainerServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addTrainerServiceModalLabel">Yeni Hizmet Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addTrainerServiceForm">
                    <input type="hidden" id="trainerId" value="@Model.Id" />
                    <div class="form-group-modern">
                        <label class="form-label-modern">Hizmet</label>
                        <select id="trainerServiceId" class="form-control-modern" required>
                            <option value="">Hizmet Seçin</option>
                            @foreach (var service in services)
                            {
                                var isAlreadyAdded = Model.TrainerServices?.Any(ts => ts.ServiceId == service.Id) ?? false;
                                if (!isAlreadyAdded)
                                {
                                    <option value="@service.Id">@service.Name</option>
                                }
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="addTrainerService()">Ekle</button>
            </div>
        </div>
    </div>
</div>

<!-- Hizmet Silme Modal -->
<div class="modal fade" id="deleteTrainerServiceModal" tabindex="-1" aria-labelledby="deleteTrainerServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content cancel-confirm-modal">
            <div class="modal-body">
                <div class="cancel-confirm-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h5 class="cancel-confirm-title">Hizmeti Silmek İstediğinizden Emin misiniz?</h5>
                <p class="cancel-confirm-message">Bu işlem geri alınamaz. Hizmet kalıcı olarak silinecektir.</p>
                <div class="gym-delete-info">
                    <div class="info-item-delete">
                        <strong>Hizmet:</strong> <span id="deleteServiceName"></span>
                    </div>
                </div>
                <input type="hidden" id="deleteTrainerServiceId" />
                <div class="cancel-confirm-actions">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="button" class="btn btn-danger" onclick="confirmDeleteTrainerService()">Evet, Sil</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Müsaitlik Ekleme Modal -->
<div class="modal fade" id="addAvailabilityModal" tabindex="-1" aria-labelledby="addAvailabilityModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAvailabilityModalLabel">Yeni Çalışma Saati Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addAvailabilityForm">
                    <input type="hidden" id="availabilityTrainerId" value="@Model.Id" />
                    <div class="form-group-modern">
                        <label class="form-label-modern">Haftanın Günü</label>
                        <select id="availabilityDayOfWeek" class="form-control-modern" required>
                            <option value="">Gün Seçin</option>
                            <option value="0">Pazar</option>
                            <option value="1">Pazartesi</option>
                            <option value="2">Salı</option>
                            <option value="3">Çarşamba</option>
                            <option value="4">Perşembe</option>
                            <option value="5">Cuma</option>
                            <option value="6">Cumartesi</option>
                        </select>
                    </div>
                    <div class="form-group-modern">
                        <label class="form-label-modern">Başlangıç Saati</label>
                        <input type="time" id="availabilityStartTime" class="form-control-modern" required />
                    </div>
                    <div class="form-group-modern">
                        <label class="form-label-modern">Bitiş Saati</label>
                        <input type="time" id="availabilityEndTime" class="form-control-modern" required />
                    </div>
                    <div class="form-group-modern form-check-modern">
                        <input type="checkbox" id="availabilityIsAvailable" class="form-check-input-modern" checked />
                        <label class="form-check-label-modern" for="availabilityIsAvailable">Müsait</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="addAvailability()">Ekle</button>
            </div>
        </div>
    </div>
</div>

<!-- Müsaitlik Silme Modal -->
<div class="modal fade" id="deleteAvailabilityModal" tabindex="-1" aria-labelledby="deleteAvailabilityModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content cancel-confirm-modal">
            <div class="modal-body">
                <div class="cancel-confirm-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h5 class="cancel-confirm-title">Çalışma Saatini Silmek İstediğinizden Emin misiniz?</h5>
                <p class="cancel-confirm-message">Bu işlem geri alınamaz. Çalışma saati kalıcı olarak silinecektir.</p>
                <div class="gym-delete-info">
                    <div class="info-item-delete">
                        <strong>Gün:</strong> <span id="deleteDayName"></span>
                    </div>
                </div>
                <input type="hidden" id="deleteAvailabilityId" />
                <div class="cancel-confirm-actions">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="button" class="btn btn-danger" onclick="confirmDeleteAvailability()">Evet, Sil</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Hizmet Silme Modal
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModal = document.getElementById('deleteTrainerServiceModal');
            if (deleteModal) {
                deleteModal.addEventListener('show.bs.modal', function(event) {
                    const button = event.relatedTarget;
                    const trainerServiceId = button.getAttribute('data-trainer-service-id');
                    const serviceName = button.getAttribute('data-service-name');
                    
                    document.getElementById('deleteTrainerServiceId').value = trainerServiceId;
                    document.getElementById('deleteServiceName').textContent = serviceName || 'Hizmet';
                });
            }
        });

        function addTrainerService() {
            const serviceId = document.getElementById('trainerServiceId').value;

            if (!serviceId) {
                alert('Lütfen bir hizmet seçin.');
                return;
            }

            const token = document.querySelector('#editTrainerForm input[name="__RequestVerificationToken"]')?.value || 
                         document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            
            fetch('@Url.Action("AddTrainerService", "Trainer")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    serviceId: serviceId,
                    __RequestVerificationToken: token
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Hizmet eklenirken bir hata oluştu.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu.');
            });
        }

        function confirmDeleteTrainerService() {
            const id = document.getElementById('deleteTrainerServiceId').value;

            const token = document.querySelector('#editTrainerForm input[name="__RequestVerificationToken"]')?.value || 
                         document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            
            fetch('@Url.Action("DeleteTrainerService", "Trainer")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    id: id,
                    __RequestVerificationToken: token
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Hizmet silinirken bir hata oluştu.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu.');
            });
        }

        function addAvailability() {
            const dayOfWeek = document.getElementById('availabilityDayOfWeek').value;
            const startTime = document.getElementById('availabilityStartTime').value;
            const endTime = document.getElementById('availabilityEndTime').value;
            const isAvailable = document.getElementById('availabilityIsAvailable').checked;

            if (!dayOfWeek || !startTime || !endTime) {
                alert('Lütfen tüm alanları doldurun.');
                return;
            }

            if (startTime >= endTime) {
                alert('Başlangıç saati bitiş saatinden önce olmalıdır.');
                return;
            }

            const token = document.querySelector('#editTrainerForm input[name="__RequestVerificationToken"]')?.value || 
                         document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            
            fetch('@Url.Action("AddTrainerAvailability", "Trainer")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    dayOfWeek: dayOfWeek,
                    startTime: startTime,
                    endTime: endTime,
                    isAvailable: isAvailable,
                    __RequestVerificationToken: token
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('addAvailabilityModal'));
                    modal.hide();
                    location.reload();
                } else {
                    alert(data.message || 'Çalışma saati eklenirken bir hata oluştu.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu.');
            });
        }

        function confirmDeleteAvailability() {
            const id = document.getElementById('deleteAvailabilityId').value;

            const token = document.querySelector('#editTrainerForm input[name="__RequestVerificationToken"]')?.value || 
                         document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            
            fetch('@Url.Action("DeleteTrainerAvailability", "Trainer")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    id: id,
                    __RequestVerificationToken: token
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('deleteAvailabilityModal'));
                    modal.hide();
                    location.reload();
                } else {
                    alert(data.message || 'Çalışma saati silinirken bir hata oluştu.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu.');
            });
        }

        function changePassword() {
            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (!currentPassword || !newPassword || !confirmPassword) {
                alert('Lütfen tüm alanları doldurun.');
                return;
            }

            if (newPassword !== confirmPassword) {
                alert('Yeni şifre ve şifre tekrarı eşleşmiyor.');
                return;
            }

            if (newPassword.length < 6) {
                alert('Şifre en az 6 karakter olmalıdır.');
                return;
            }

            const token = document.querySelector('#changePasswordForm input[name="__RequestVerificationToken"]')?.value || 
                         document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            
            fetch('@Url.Action("ChangePassword", "Trainer")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    currentPassword: currentPassword,
                    newPassword: newPassword,
                    confirmPassword: confirmPassword,
                    __RequestVerificationToken: token
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message || 'Şifre başarıyla değiştirildi.');
                    document.getElementById('changePasswordForm').reset();
                } else {
                    alert(data.message || 'Şifre değiştirilemedi.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu.');
            });
        }

        // Müsaitlik Silme Modal
        document.addEventListener('DOMContentLoaded', function() {
            const deleteAvailabilityModal = document.getElementById('deleteAvailabilityModal');
            if (deleteAvailabilityModal) {
                deleteAvailabilityModal.addEventListener('show.bs.modal', function(event) {
                    const button = event.relatedTarget;
                    const availabilityId = button.getAttribute('data-availability-id');
                    const dayName = button.getAttribute('data-day-name');
                    
                    document.getElementById('deleteAvailabilityId').value = availabilityId;
                    document.getElementById('deleteDayName').textContent = dayName || 'Gün';
                });
            }
        });
    </script>
}

