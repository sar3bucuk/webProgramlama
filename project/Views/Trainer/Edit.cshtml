@model proje.Models.Trainer
@{
    ViewData["Title"] = "Bilgilerimi Düzenle";
    Layout = "_Layout";
    var services = ViewBag.Services as IEnumerable<proje.Models.Service> ?? new List<proje.Models.Service>();
}

<div class="auth-page-modern">
    <div class="auth-stars-background"></div>
    <div class="auth-container-modern" style="max-width: 1200px;">
        <div class="auth-card-modern admin-dashboard-card">
            <div class="auth-header-modern">
                <h2 class="auth-title-modern">Bilgilerimi Düzenle</h2>
                <p class="auth-subtitle-modern">Kişisel bilgilerinizi güncelleyin</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="Edit" method="post" class="auth-form-modern" id="editTrainerForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="GymId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group-modern">
                    <label asp-for="FirstName" class="form-label-modern">Ad</label>
                    <input asp-for="FirstName" class="form-control-modern" placeholder="Örn: Ahmet" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="LastName" class="form-label-modern">Soyad</label>
                    <input asp-for="LastName" class="form-control-modern" placeholder="Örn: Yılmaz" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-modern">
                            <label asp-for="Phone" class="form-label-modern">Telefon</label>
                            <input asp-for="Phone" class="form-control-modern" placeholder="Örn: 0264 123 45 67" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Email" class="form-label-modern">E-posta</label>
                    <input asp-for="Email" type="email" class="form-control-modern" placeholder="Örn: ahmet@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <label class="form-label-modern">Spor Salonu</label>
                    <input type="text" class="form-control-modern" value="@(Model.Gym?.Name ?? "Henüz atanmamış")" readonly />
                    <small class="text-muted">Spor salonu değişikliği için admin ile iletişime geçin.</small>
                </div>

                <div class="form-group-modern">
                    <label asp-for="ExperienceYears" class="form-label-modern">Deneyim Yılı</label>
                    <input asp-for="ExperienceYears" type="number" class="form-control-modern" min="0" />
                    <span asp-validation-for="ExperienceYears" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Bio" class="form-label-modern">Biyografi</label>
                    <textarea asp-for="Bio" class="form-control-modern" rows="4" placeholder="Hakkınızda bilgi yazın..."></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group-modern form-check-modern">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input-modern" />
                    <label asp-for="IsActive" class="form-check-label-modern">Aktif</label>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>

                <div class="form-actions-modern">
                    <a href="@Url.Action("Index", "Trainer")" class="btn-auth-modern btn-secondary-modern">İptal</a>
                    <button type="submit" class="btn-auth-modern">Güncelle</button>
                </div>
            </form>

            <!-- Hizmetler Bölümü -->
            <div class="services-section">
                <div class="services-header">
                    <h3>Verdiğim Hizmetler</h3>
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addTrainerServiceModal">
                        <span>+</span> Yeni Hizmet Ekle
                    </button>
                </div>

                <div class="services-list">
                    @if (Model.TrainerServices != null && Model.TrainerServices.Any())
                    {
                        @foreach (var trainerService in Model.TrainerServices)
                        {
                            <div class="service-item" data-trainer-service-id="@trainerService.Id">
                                <div class="service-info">
                                    <h5>@trainerService.Service?.Name</h5>
                                </div>
                                <div class="service-actions">
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteTrainerServiceModal"
                                            data-trainer-service-id="@trainerService.Id"
                                            data-service-name="@trainerService.Service?.Name">
                                        Sil
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Henüz hizmet eklenmemiş.</p>
                    }
                </div>
            </div>

            <!-- Hizmet Ekleme Modal -->
            <div class="modal fade" id="addTrainerServiceModal" tabindex="-1" aria-labelledby="addTrainerServiceModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addTrainerServiceModalLabel">Yeni Hizmet Ekle</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="addTrainerServiceForm">
                                <input type="hidden" id="trainerId" value="@Model.Id" />
                                <div class="form-group-modern">
                                    <label class="form-label-modern">Hizmet</label>
                                    <select id="trainerServiceId" class="form-control-modern" required>
                                        <option value="">Hizmet Seçin</option>
                                        @foreach (var service in services)
                                        {
                                            var isAlreadyAdded = Model.TrainerServices?.Any(ts => ts.ServiceId == service.Id) ?? false;
                                            if (!isAlreadyAdded)
                                            {
                                                <option value="@service.Id">@service.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                            <button type="button" class="btn btn-primary" onclick="addTrainerService()">Ekle</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Hizmet Silme Modal -->
            <div class="modal fade" id="deleteTrainerServiceModal" tabindex="-1" aria-labelledby="deleteTrainerServiceModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); color: white; border-bottom: none;">
                            <h5 class="modal-title" id="deleteTrainerServiceModalLabel">
                                <span style="font-size: 1.5rem;">⚠️</span> Hizmet Sil
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="alert alert-warning">
                                <strong>Uyarı!</strong> Bu işlem geri alınamaz. Hizmet silinecektir.
                            </div>

                            <div class="delete-info-modal">
                                <p style="margin: 0; color: #1e293b; font-weight: 600;">
                                    "<strong><span id="deleteServiceName"></span></strong>" hizmetini silmek istediğinizden emin misiniz?
                                </p>
                            </div>

                            <input type="hidden" id="deleteTrainerServiceId" />
                        </div>
                        <div class="modal-footer" style="border-top: none;">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                            <button type="button" class="btn btn-danger" onclick="confirmDeleteTrainerService()">Evet, Sil</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Hizmet Silme Modal
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModal = document.getElementById('deleteTrainerServiceModal');
            if (deleteModal) {
                deleteModal.addEventListener('show.bs.modal', function(event) {
                    const button = event.relatedTarget;
                    const trainerServiceId = button.getAttribute('data-trainer-service-id');
                    const serviceName = button.getAttribute('data-service-name');
                    
                    document.getElementById('deleteTrainerServiceId').value = trainerServiceId;
                    document.getElementById('deleteServiceName').textContent = serviceName || 'Hizmet';
                });
            }
        });

        function addTrainerService() {
            const serviceId = document.getElementById('trainerServiceId').value;

            if (!serviceId) {
                alert('Lütfen bir hizmet seçin.');
                return;
            }

            const token = document.querySelector('#editTrainerForm input[name="__RequestVerificationToken"]')?.value || 
                         document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            
            fetch('@Url.Action("AddTrainerService", "Trainer")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    serviceId: serviceId,
                    __RequestVerificationToken: token
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Hizmet eklenirken bir hata oluştu.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu.');
            });
        }

        function confirmDeleteTrainerService() {
            const id = document.getElementById('deleteTrainerServiceId').value;

            const token = document.querySelector('#editTrainerForm input[name="__RequestVerificationToken"]')?.value || 
                         document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            
            fetch('@Url.Action("DeleteTrainerService", "Trainer")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    id: id,
                    __RequestVerificationToken: token
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Hizmet silinirken bir hata oluştu.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu.');
            });
        }
    </script>
}

