@model proje.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_Layout";
}

<div class="auth-page-modern">
    <div class="auth-stars-background"></div>
    <div class="auth-container-modern">
        <div class="auth-card-modern">
            <div class="auth-header-modern">
                <h2 class="auth-title-modern">Hoş Geldiniz</h2>
                <p class="auth-subtitle-modern">Hesabınıza giriş yapın</p>
            </div>
            
            <form asp-action="Login" method="post" class="auth-form-modern">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="form-group-modern">
                    <label asp-for="Email" class="form-label-modern">E-posta</label>
                    <input asp-for="Email" class="form-control-modern" placeholder="ornek@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group-modern">
                    <label asp-for="Password" class="form-label-modern">Şifre</label>
                    <input asp-for="Password" class="form-control-modern" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="form-group-modern form-check-modern">
                    <input asp-for="RememberMe" class="form-check-input-modern" />
                    <label asp-for="RememberMe" class="form-check-label-modern">Beni Hatırla</label>
                </div>
                
                <button type="submit" class="btn-auth-modern w-100">Giriş Yap</button>
                
                <div class="auth-footer-modern">
                    <p>Hesabınız yok mu? <a asp-action="Register" class="auth-link-modern">Kayıt Ol</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

