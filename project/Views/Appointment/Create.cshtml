@model proje.Models.Appointment
@{
    ViewData["Title"] = "Randevu Al";
    Layout = "_Layout";
    var memberGym = ViewBag.MemberGym as proje.Models.Gym;
    var memberGymId = ViewBag.MemberGymId as int?;
    var hasGym = ViewBag.HasGym as bool? ?? false;
    var services = ViewBag.Services as IEnumerable<proje.Models.Service> ?? new List<proje.Models.Service>();
}

<div class="auth-page-modern">
    <div class="auth-stars-background"></div>
    <div class="auth-container-modern" style="max-width: 1000px;">
        <div class="auth-card-modern">
            <div class="auth-header-modern">
                <div class="d-flex justify-content-end align-items-center mb-3">
                    <a href="@Url.Action("MyAppointments", "Appointment")" class="btn btn-outline-secondary back-btn-edit">
                        <i class="bi bi-arrow-left"></i> Geri Dön
                    </a>
                </div>
                <h2 class="auth-title-modern">Randevu Al</h2>
                <p class="auth-subtitle-modern">Antrenörünüzle randevu oluşturun</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!hasGym)
            {
                <div class="alert alert-warning" role="alert">
                    <strong>⚠️ Bilgilendirme:</strong> Herhangi bir spor salonuna kaydınız bulunmadığından randevu oluşturamazsınız. Lütfen spor salonu admini ile iletişime geçiniz.
                </div>
            }

            <form asp-action="Create" method="post" class="auth-form-modern" id="appointmentForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                @if (memberGym != null && memberGymId.HasValue)
                {
                    <div class="form-group-modern">
                        <label class="form-label-modern">Spor Salonu</label>
                        <input type="text" class="form-control-modern" value="@memberGym.Name" readonly style="background-color: #f8f9fa; cursor: not-allowed;" />
                        <input type="hidden" id="gymSelect" name="gymSelect" value="@memberGymId.Value" />
                        <small class="text-muted">Kayıtlı olduğunuz spor salonu</small>
                    </div>
                }
                else
                {
                    <div class="form-group-modern">
                        <label class="form-label-modern">Spor Salonu</label>
                        <input type="text" class="form-control-modern" value="Kayıtlı spor salonu bulunamadı" readonly style="background-color: #f8f9fa; cursor: not-allowed; color: #999;" />
                        <input type="hidden" id="gymSelect" name="gymSelect" value="" />
                    </div>
                }

                <div class="form-group-modern">
                    <label asp-for="GymServiceId" class="form-label-modern">Hizmet <span class="text-danger">*</span></label>
                    @if (hasGym)
                    {
                        <select id="serviceSelect" class="form-control-modern" required>
                            <option value="">Önce spor salonu seçin</option>
                        </select>
                    }
                    else
                    {
                        <select id="serviceSelect" class="form-control-modern" required disabled>
                            <option value="">Spor salonu kaydı bulunamadı</option>
                        </select>
                    }
                    <input type="hidden" id="GymServiceId" name="GymServiceId" value="0" />
                    <span asp-validation-for="GymServiceId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-modern">
                            <label asp-for="AppointmentDate" class="form-label-modern">Randevu Tarihi <span class="text-danger">*</span></label>
                            @if (hasGym)
                            {
                                <input asp-for="AppointmentDate" type="date" class="form-control-modern" min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            }
                            else
                            {
                                <input asp-for="AppointmentDate" type="date" class="form-control-modern" min="@DateTime.Now.ToString("yyyy-MM-dd")" required disabled />
                            }
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-modern">
                            <label asp-for="AppointmentTime" class="form-label-modern">Başlangıç Saati <span class="text-danger">*</span></label>
                            @if (hasGym)
                            {
                                <input asp-for="AppointmentTime" type="time" class="form-control-modern" required />
                            }
                            else
                            {
                                <input asp-for="AppointmentTime" type="time" class="form-control-modern" required disabled />
                            }
                            <small class="text-muted">Süre seçilen hizmetten otomatik alınacaktır</small>
                            <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group-modern">
                    <label asp-for="TrainerId" class="form-label-modern">Antrenör <span class="text-danger">*</span></label>
                    @if (hasGym)
                    {
                        <select id="trainerSelect" class="form-control-modern" required>
                            <option value="">Önce tarih, saat ve hizmet seçin</option>
                        </select>
                    }
                    else
                    {
                        <select id="trainerSelect" class="form-control-modern" required disabled>
                            <option value="">Spor salonu kaydı bulunamadı</option>
                        </select>
                    }
                    <input type="hidden" id="TrainerId" name="TrainerId" value="0" />
                    <span asp-validation-for="TrainerId" class="text-danger"></span>
                </div>

                <div id="trainerInfo" class="trainer-info-card" style="display: none;">
                    <div id="trainerDetails"></div>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Notes" class="form-label-modern">Notlar (Opsiyonel)</label>
                    @if (hasGym)
                    {
                        <textarea asp-for="Notes" class="form-control-modern" rows="3" placeholder="Randevu ile ilgili özel notlarınız..."></textarea>
                    }
                    else
                    {
                        <textarea asp-for="Notes" class="form-control-modern" rows="3" placeholder="Randevu ile ilgili özel notlarınız..." disabled></textarea>
                    }
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-actions-modern">
                    <a href="@Url.Action("MyAppointments", "Appointment")" class="btn-auth-modern btn-secondary-modern">İptal</a>
                    @if (hasGym)
                    {
                        <button type="submit" class="btn-auth-modern">Randevu Oluştur</button>
                    }
                    else
                    {
                        <button type="submit" class="btn-auth-modern" disabled>Randevu Oluştur</button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        let currentDuration = 0;

        window.addEventListener('DOMContentLoaded', function() {
            const hasGym = @(hasGym ? "true" : "false");
            const memberGymId = '@memberGymId';
            const selectedGymServiceId = '@ViewBag.SelectedGymServiceId';
            const selectedTrainerId = '@ViewBag.SelectedTrainerId';
            
            if (hasGym && memberGymId && memberGymId !== '0') {
                loadGymServices(memberGymId);
            }
        });

        function loadGymServices(gymId) {
            const serviceSelect = document.getElementById('serviceSelect');
            const trainerSelect = document.getElementById('trainerSelect');
            
            serviceSelect.innerHTML = '<option value="">Yükleniyor...</option>';
            trainerSelect.innerHTML = '<option value="">Önce tarih, saat ve hizmet seçin</option>';
            document.getElementById('trainerInfo').style.display = 'none';

            fetch('/api/AppointmentsApi/gym-services/' + gymId, {
                method: 'GET',
                headers: {
                    'Accept': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    serviceSelect.innerHTML = '<option value="">Hizmet Seçin</option>';
                    data.services.forEach(service => {
                        const option = document.createElement('option');
                        option.value = service.id.toString();
                        option.textContent = service.name + ' (' + service.duration + ' dk - ' + service.price.toFixed(2) + ' ₺)';
                        option.setAttribute('data-duration', service.duration);
                        option.setAttribute('data-price', service.price);
                        serviceSelect.appendChild(option);
                    });
                    
                    const selectedServiceId = '@ViewBag.SelectedGymServiceId';
                    if (selectedServiceId && selectedServiceId !== '0') {
                        serviceSelect.value = selectedServiceId;
                        document.getElementById('GymServiceId').value = selectedServiceId;
                        const selectedOption = serviceSelect.options[serviceSelect.selectedIndex];
                        if (selectedOption) {
                            currentDuration = parseInt(selectedOption.getAttribute('data-duration'));
                            checkAvailability();
                        }
                    }
                }
            })
            .catch(error => {
                console.error('Hata:', error);
                serviceSelect.innerHTML = '<option value="">Hizmetler yüklenirken hata oluştu</option>';
            });
        }

        document.getElementById('serviceSelect').addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            if (selectedOption.value) {
                currentDuration = parseInt(selectedOption.getAttribute('data-duration'));
                document.getElementById('GymServiceId').value = selectedOption.value;
                checkAvailability();
            } else {
                document.getElementById('GymServiceId').value = '';
            }
        });

        document.getElementById('AppointmentDate').addEventListener('change', checkAvailability);
        document.getElementById('AppointmentTime').addEventListener('change', checkAvailability);

        function checkAvailability() {
            const gymSelect = document.getElementById('gymSelect');
            if (!gymSelect) {
                return;
            }
            
            const gymId = gymSelect.value;
            const gymServiceId = document.getElementById('serviceSelect').value;
            const appointmentDate = document.getElementById('AppointmentDate').value;
            const appointmentTime = document.getElementById('AppointmentTime').value;
            const trainerSelect = document.getElementById('trainerSelect');
            trainerSelect.innerHTML = '<option value="">Yükleniyor...</option>';
            document.getElementById('trainerInfo').style.display = 'none';

            if (gymId && gymServiceId && appointmentDate && appointmentTime && currentDuration > 0) {
                const url = '/api/AppointmentsApi/available-trainers' + 
                    '?gymId=' + encodeURIComponent(gymId) +
                    '&gymServiceId=' + encodeURIComponent(gymServiceId) +
                    '&appointmentDate=' + encodeURIComponent(appointmentDate) +
                    '&appointmentTime=' + encodeURIComponent(appointmentTime) +
                    '&duration=' + encodeURIComponent(currentDuration);
                    
                fetch(url, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        trainerSelect.innerHTML = '<option value="">Antrenör Seçin</option>';
                        if (data.trainers.length > 0) {
                            data.trainers.forEach(trainer => {
                                const option = document.createElement('option');
                                option.value = trainer.id.toString();
                                option.textContent = trainer.name + (trainer.experience > 0 ? ' (' + trainer.experience + ' yıl deneyim)' : '');
                                option.setAttribute('data-bio', trainer.bio || '');
                                trainerSelect.appendChild(option);
                            });
                            
                            const selectedTrainerId = '@ViewBag.SelectedTrainerId';
                            if (selectedTrainerId && selectedTrainerId !== '0') {
                                trainerSelect.value = selectedTrainerId;
                                document.getElementById('TrainerId').value = selectedTrainerId;
                                const selectedOption = trainerSelect.options[trainerSelect.selectedIndex];
                                if (selectedOption && selectedOption.getAttribute('data-bio')) {
                                    document.getElementById('trainerDetails').innerHTML = '<strong>Biyografi:</strong> ' + selectedOption.getAttribute('data-bio');
                                    document.getElementById('trainerInfo').style.display = 'block';
                                }
                            }
                        } else {
                            trainerSelect.innerHTML = '<option value="">Müsait antrenör bulunamadı</option>';
                        }
                    }
                })
                .catch(error => {
                    console.error('Hata:', error);
                    trainerSelect.innerHTML = '<option value="">Antrenörler yüklenirken hata oluştu</option>';
                });
            }
        }

        document.getElementById('trainerSelect').addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const trainerInfo = document.getElementById('trainerInfo');
            const trainerDetails = document.getElementById('trainerDetails');

            if (selectedOption.value) {
                document.getElementById('TrainerId').value = selectedOption.value;
                
                if (selectedOption.getAttribute('data-bio')) {
                    trainerDetails.innerHTML = '<strong>Biyografi:</strong> ' + selectedOption.getAttribute('data-bio');
                    trainerInfo.style.display = 'block';
                } else {
                    trainerInfo.style.display = 'none';
                }
            } else {
                document.getElementById('TrainerId').value = '';
                trainerInfo.style.display = 'none';
            }
        });

        document.getElementById('appointmentForm').addEventListener('submit', function(e) {
            const hasGym = @(hasGym ? "true" : "false");
            
            if (!hasGym) {
                e.preventDefault();
                alert('Herhangi bir spor salonuna kaydınız bulunmadığından randevu oluşturamazsınız. Lütfen spor salonu admini ile iletişime geçiniz.');
                return false;
            }
            
            const serviceSelect = document.getElementById('serviceSelect');
            const trainerSelect = document.getElementById('trainerSelect');
            const gymServiceIdHidden = document.getElementById('GymServiceId');
            const trainerIdHidden = document.getElementById('TrainerId');
            const appointmentDateInput = document.getElementById('AppointmentDate');
            const appointmentTimeInput = document.getElementById('AppointmentTime');
            
            const gymServiceId = serviceSelect.value;
            const trainerId = trainerSelect.value;
            const appointmentDate = appointmentDateInput.value;
            const appointmentTime = appointmentTimeInput.value;
            
            console.log('Form submit - GymServiceId (select):', gymServiceId, 'TrainerId (select):', trainerId);
            console.log('Form submit - GymServiceId (hidden before):', gymServiceIdHidden.value, 'TrainerId (hidden before):', trainerIdHidden.value);
            console.log('Form submit - Date:', appointmentDate, 'Time:', appointmentTime);
            
            const serviceIdNum = parseInt(gymServiceId);
            const trainerIdNum = parseInt(trainerId);
            
            if (!gymServiceId || gymServiceId === '' || gymServiceId === '0' || isNaN(serviceIdNum) || serviceIdNum <= 0) {
                e.preventDefault();
                alert('Lütfen bir hizmet seçin.');
                serviceSelect.focus();
                return false;
            }
            
            if (!trainerId || trainerId === '' || trainerId === '0' || isNaN(trainerIdNum) || trainerIdNum <= 0) {
                e.preventDefault();
                alert('Lütfen bir antrenör seçin.');
                trainerSelect.focus();
                return false;
            }
            
            if (!appointmentDate) {
                e.preventDefault();
                alert('Lütfen bir randevu tarihi seçin.');
                appointmentDateInput.focus();
                return false;
            }
            
            if (!appointmentTime) {
                e.preventDefault();
                alert('Lütfen bir randevu saati seçin.');
                appointmentTimeInput.focus();
                return false;
            }
            
            gymServiceIdHidden.value = serviceIdNum.toString();
            trainerIdHidden.value = trainerIdNum.toString();
            
            if (!gymServiceIdHidden.name || gymServiceIdHidden.name === '') {
                gymServiceIdHidden.setAttribute('name', 'GymServiceId');
            }
            if (!trainerIdHidden.name || trainerIdHidden.name === '') {
                trainerIdHidden.setAttribute('name', 'TrainerId');
            }
            
            console.log('Form gönderiliyor - Final values - GymServiceId:', gymServiceIdHidden.value, 'TrainerId:', trainerIdHidden.value);
            console.log('Hidden input names - GymServiceId:', gymServiceIdHidden.name, 'TrainerId:', trainerIdHidden.name);
        });
    </script>
}

