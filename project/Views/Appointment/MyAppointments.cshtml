    <div class="auth-stars-background"></div>
    <div class="auth-container-modern" style="max-width: 1400px;">
        <div class="auth-card-modern admin-dashboard-card">
            <div class="admin-content-full">
                <div class="admin-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2>Randevularım</h2>
                            <p class="text-muted">Randevularınızı görüntüleyin ve yönetin</p>
                        </div>
                        <a href="@Url.Action("Create", "Appointment")" class="btn btn-primary">
                            <span>+</span> Yeni Randevu Al
                        </a>
                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Tab Navigation -->
                <ul class="nav nav-tabs mt-4" id="appointmentTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="current-tab" data-bs-toggle="tab" data-bs-target="#current" type="button" role="tab">
                            Güncel Randevular
                            @if (currentAppointments.Any())
                            {
                                <span class="badge bg-primary ms-2">@currentAppointments.Count()</span>
                            }
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="past-tab" data-bs-toggle="tab" data-bs-target="#past" type="button" role="tab">
                            Geçmiş Randevular
                            @if (pastAppointments.Any())
                            {
                                <span class="badge bg-success ms-2">@pastAppointments.Count()</span>
                            }
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="cancelled-tab" data-bs-toggle="tab" data-bs-target="#cancelled" type="button" role="tab">
                            İptal ve Reddedildi
                            @if (cancelledRejectedAppointments.Any())
                            {
                                <span class="badge bg-danger ms-2">@cancelledRejectedAppointments.Count()</span>
                            }
                        </button>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content mt-3" id="appointmentTabContent">
                    <!-- Current Appointments Tab -->
                    <div class="tab-pane fade show active" id="current" role="tabpanel">
                        <div class="appointments-table-card">
                            @if (currentAppointments != null && currentAppointments.Any())
                            {
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Tarih</th>
                                            <th>Saat</th>
                                            <th>Antrenör</th>
                                            <th>Spor Salonu</th>
                                            <th>Hizmet</th>
                                            <th>Süre</th>
                                            <th>Ücret</th>
                                            <th>Durum</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appointment in currentAppointments)
                                        {
                                            <tr>
                                                <td><strong style="color: #1e293b;">@appointment.AppointmentDate.ToString("dd.MM.yyyy")</strong></td>
                                                <td style="color: #64748b;">@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                                <td style="color: #64748b;">@appointment.Trainer?.FullName</td>
                                                <td style="color: #64748b;">@appointment.Trainer?.Gym?.Name</td>
                                                <td style="color: #64748b;">@appointment.GymService?.Service?.Name</td>
                                                <td style="color: #64748b;">@appointment.Duration dakika</td>
                                                <td style="color: #64748b;">@appointment.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                                                <td>
                                                    @switch (appointment.Status)
                                                    {
                                                        case "Pending":
                                                            <span class="badge bg-warning">Beklemede</span>
                                                            break;
                                                        case "Approved":
                                                            <span class="badge bg-success">Onaylandı</span>
                                                            break;
                                                        case "Rejected":
                                                            <span class="badge bg-danger">Reddedildi</span>
                                                            break;
                                                        case "Completed":
                                                            <span class="badge bg-info">Tamamlandı</span>
                                                            break;
                                                        case "Cancelled":
                                                            <span class="badge bg-secondary">İptal Edildi</span>
                                                            break;
                                                        default:
                                                            <span class="badge bg-secondary">@appointment.Status</span>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    @if (appointment.Status == "Pending" || appointment.Status == "Approved")
                                                    {
                                                        <button class="btn btn-sm btn-danger" onclick="cancelAppointment(@appointment.Id)">
                                                            İptal Et
                                                        </button>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="text-center text-muted py-5">
                                    <p>Güncel randevunuz bulunmamaktadır.</p>
                                    <a href="@Url.Action("Create", "Appointment")" class="btn btn-primary">İlk Randevunuzu Oluşturun</a>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Past Appointments Tab -->
                    <div class="tab-pane fade" id="past" role="tabpanel">
                        <div class="appointments-table-card">
                            @if (pastAppointments != null && pastAppointments.Any())
                            {
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Tarih</th>
                                            <th>Saat</th>
                                            <th>Antrenör</th>
                                            <th>Spor Salonu</th>
                                            <th>Hizmet</th>
                                            <th>Süre</th>
                                            <th>Ücret</th>
                                            <th>Durum</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appointment in pastAppointments)
                                        {
                                            <tr>
                                                <td><strong style="color: #1e293b;">@appointment.AppointmentDate.ToString("dd.MM.yyyy")</strong></td>
                                                <td style="color: #64748b;">@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                                <td style="color: #64748b;">@appointment.Trainer?.FullName</td>
                                                <td style="color: #64748b;">@appointment.Trainer?.Gym?.Name</td>
                                                <td style="color: #64748b;">@appointment.GymService?.Service?.Name</td>
                                                <td style="color: #64748b;">@appointment.Duration dakika</td>
                                                <td style="color: #64748b;">@appointment.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                                                <td>
                                                    @switch (appointment.Status)
                                                    {
                                                        case "Pending":
                                                            <span class="badge bg-warning">Beklemede</span>
                                                            break;
                                                        case "Approved":
                                                            <span class="badge bg-success">Onaylandı</span>
                                                            break;
                                                        case "Rejected":
                                                            <span class="badge bg-danger">Reddedildi</span>
                                                            break;
                                                        case "Completed":
                                                            <span class="badge bg-info">Tamamlandı</span>
                                                            break;
                                                        case "Cancelled":
                                                            <span class="badge bg-secondary">İptal Edildi</span>
                                                            break;
                                                        default:
                                                            <span class="badge bg-secondary">@appointment.Status</span>
                                                            break;
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="text-center text-muted py-5">
                                    <p>Geçmiş randevunuz bulunmamaktadır.</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Cancelled and Rejected Appointments Tab -->
                    <div class="tab-pane fade" id="cancelled" role="tabpanel">
                        <div class="appointments-table-card">
                            @if (cancelledRejectedAppointments != null && cancelledRejectedAppointments.Any())
                            {
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Tarih</th>
                                            <th>Saat</th>
                                            <th>Antrenör</th>
                                            <th>Spor Salonu</th>
                                            <th>Hizmet</th>
                                            <th>Süre</th>
                                            <th>Ücret</th>
                                            <th>Durum</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appointment in cancelledRejectedAppointments)
                                        {
                                            <tr>
                                                <td><strong style="color: #1e293b;">@appointment.AppointmentDate.ToString("dd.MM.yyyy")</strong></td>
                                                <td style="color: #64748b;">@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                                <td style="color: #64748b;">@appointment.Trainer?.FullName</td>
                                                <td style="color: #64748b;">@appointment.Trainer?.Gym?.Name</td>
                                                <td style="color: #64748b;">@appointment.GymService?.Service?.Name</td>
                                                <td style="color: #64748b;">@appointment.Duration dakika</td>
                                                <td style="color: #64748b;">@appointment.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                                                <td>
                                                    @switch (appointment.Status)
                                                    {
                                                        case "Rejected":
                                                            <span class="badge bg-danger">Reddedildi</span>
                                                            break;
                                                        case "Cancelled":
                                                            <span class="badge bg-secondary">İptal Edildi</span>
                                                            break;
                                                        default:
                                                            <span class="badge bg-secondary">@appointment.Status</span>
                                                            break;
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="text-center text-muted py-5">
                                    <p>İptal edilmiş veya reddedilmiş randevunuz bulunmamaktadır.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<!-- İptal Onay Modal -->
<div class="modal fade" id="cancelConfirmModal" tabindex="-1" aria-labelledby="cancelConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content cancel-confirm-modal">
            <div class="modal-body">
                <div class="cancel-confirm-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h5 class="cancel-confirm-title">Randevuyu İptal Etmek İstediğinizden Emin misiniz?</h5>
                <p class="cancel-confirm-message">Bu işlem geri alınamaz. Randevunuz iptal edilecek ve antrenörünüze bildirim gönderilecektir.</p>
                <div class="cancel-confirm-actions">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="button" class="btn btn-danger" id="confirmCancelBtn">Evet, İptal Et</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Başarı/Hata Bildirim Modal -->
<div class="modal fade" id="notificationModal" tabindex="-1" aria-labelledby="notificationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content notification-modal">
            <div class="modal-body">
                <div class="notification-icon" id="notificationIcon">
                    <i class="bi bi-check-circle"></i>
                </div>
                <h5 class="notification-title" id="notificationTitle">Başarılı</h5>
                <p class="notification-message" id="notificationMessage"></p>
                <div class="notification-actions">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Tamam</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let currentAppointmentId = null;

    function cancelAppointment(appointmentId) {
        currentAppointmentId = appointmentId;
        const modal = new bootstrap.Modal(document.getElementById('cancelConfirmModal'));
        modal.show();
    }

    document.getElementById('confirmCancelBtn').addEventListener('click', function() {
        if (!currentAppointmentId) return;

        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
        
        if (!token) {
            showNotification('Hata', 'Güvenlik token\'ı bulunamadı. Sayfayı yenileyip tekrar deneyin.', false);
            bootstrap.Modal.getInstance(document.getElementById('cancelConfirmModal')).hide();
            return;
        }

        fetch('@Url.Action("CancelAppointment", "Appointment")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': token
            },
            body: new URLSearchParams({
                id: currentAppointmentId,
                __RequestVerificationToken: token
            })
        })
        .then(response => response.json())
        .then(data => {
            bootstrap.Modal.getInstance(document.getElementById('cancelConfirmModal')).hide();
            
            if (data.success) {
                showNotification('Başarılı', data.message || 'Randevu başarıyla iptal edildi.', true);
                setTimeout(() => {
                    location.reload();
                }, 1500);
            } else {
                showNotification('Hata', data.message || 'Randevu iptal edilirken bir hata oluştu.', false);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            bootstrap.Modal.getInstance(document.getElementById('cancelConfirmModal')).hide();
            showNotification('Hata', 'Bir hata oluştu. Lütfen tekrar deneyin.', false);
        });
    });

    function showNotification(title, message, isSuccess) {
        const modal = document.getElementById('notificationModal');
        const icon = document.getElementById('notificationIcon');
        const titleEl = document.getElementById('notificationTitle');
        const messageEl = document.getElementById('notificationMessage');
        
        titleEl.textContent = title;
        messageEl.textContent = message;
        
        if (isSuccess) {
            icon.innerHTML = '<i class="bi bi-check-circle"></i>';
            icon.className = 'notification-icon success';
            titleEl.className = 'notification-title success';
        } else {
            icon.innerHTML = '<i class="bi bi-x-circle"></i>';
            icon.className = 'notification-icon error';
            titleEl.className = 'notification-title error';
        }
        
        const bsModal = new bootstrap.Modal(modal);
        bsModal.show();
    }
</script>

