    var pastAppointments = ViewBag.PastAppointments as IEnumerable<proje.Models.Appointment> ?? new List<proje.Models.Appointment>();
    var cancelledRejectedAppointments = ViewBag.CancelledRejectedAppointments as IEnumerable<proje.Models.Appointment> ?? new List<proje.Models.Appointment>();
}

