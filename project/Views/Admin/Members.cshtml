@model IEnumerable<proje.Models.Member>
@{
    ViewData["Title"] = "Üyeler Yönetimi";
    Layout = "_Layout";
    var gyms = ViewBag.Gyms as IEnumerable<proje.Models.Gym> ?? new List<proje.Models.Gym>();
}

<div class="auth-page-modern">
    <div class="auth-stars-background"></div>
    <div class="auth-container-modern" style="max-width: 1400px;">
        <div class="auth-card-modern admin-dashboard-card">
            <div class="admin-content-full">
                <div class="admin-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2>Üyeler</h2>
                            <p class="text-muted">Üyeleri yönetin ve spor salonlarına bağlayın</p>
                        </div>
                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Filtreleme ve Arama Formu -->
                <div class="members-filter-card">
                    <form method="get" action="@Url.Action("Members", "Admin")" class="filter-form">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-5">
                                <label class="form-label-modern">İsme Göre Ara</label>
                                <input type="text" name="searchName" class="form-control-modern" 
                                       value="@ViewBag.SearchName" 
                                       placeholder="Ad veya soyad ile ara...">
                            </div>
                            <div class="col-md-5">
                                <label class="form-label-modern">Spor Salonuna Göre Filtrele</label>
                                <select name="gymId" class="form-control-modern">
                                    <option value="">Tümü</option>
                                    @{
                                        var selectedGymId = ViewBag.SelectedGymId?.ToString();
                                    }
                                    @if (selectedGymId == "0")
                                    {
                                        <option value="0" selected>Bağlı Değil</option>
                                    }
                                    else
                                    {
                                        <option value="0">Bağlı Değil</option>
                                    }
                                    @foreach (var gym in gyms)
                                    {
                                        @if (selectedGymId == gym.Id.ToString())
                                        {
                                            <option value="@gym.Id" selected>@gym.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@gym.Id">@gym.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary w-100" style="height: 42px;">Filtrele</button>
                            </div>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(ViewBag.SearchName?.ToString()) || (ViewBag.SelectedGymId != null))
                        {
                            <div class="mt-2">
                                <a href="@Url.Action("Members", "Admin")" class="btn btn-sm btn-outline-secondary">Filtreleri Temizle</a>
                            </div>
                        }
                    </form>
                </div>

                <div class="members-table-card">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="mb-0" style="color: #1e293b;">Toplam Üye: <span class="text-primary">@Model.Count()</span></h5>
                        </div>
                    </div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>E-posta</th>
                                <th>Telefon</th>
                                <th>Spor Salonu</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var member in Model)
                                {
                                    <tr>
                                        <td><strong style="color: #1e293b;">@member.FullName</strong></td>
                                        <td style="color: #64748b;">@(member.User?.Email ?? "-")</td>
                                        <td style="color: #64748b;">@(member.Phone ?? "-")</td>
                                        <td>
                                            <span class="member-gym-badge" data-member-id="@member.Id" data-current-gym-id="@(member.GymId?.ToString() ?? "0")">
                                                @(member.Gym?.Name ?? "Bağlı değil")
                                            </span>
                                        </td>
                                        <td style="color: #64748b;">@member.CreatedDate.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-info me-1" 
                                                    onclick="showMemberDetails(@member.Id)">
                                                <i class="bi bi-eye"></i> Detaylar
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-primary" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#editMemberModal"
                                                    data-member-id="@member.Id"
                                                    data-member-name="@member.FullName"
                                                    data-member-email="@(member.User?.Email ?? "-")"
                                                    data-member-phone="@(member.Phone ?? "-")"
                                                    data-current-gym-id="@(member.GymId?.ToString() ?? "0")"
                                                    data-current-gym-name="@(member.Gym?.Name ?? "")">
                                                Düzenle
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        Henüz üye bulunmamaktadır.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<!-- Üye Detayları Modal -->
<div class="modal fade" id="memberDetailsModal" tabindex="-1" aria-labelledby="memberDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="memberDetailsModalLabel">
                    <i class="bi bi-person-circle"></i> Üye Detayları
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="memberDetailsContent">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Yükleniyor...</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<!-- Üye Düzenleme Modal -->
<div class="modal fade" id="editMemberModal" tabindex="-1" aria-labelledby="editMemberModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editMemberModalLabel">Üye Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editMemberForm">
                    <input type="hidden" id="editMemberId" />
                    <div class="member-edit-info">
                        <p class="text-muted mb-3">
                            <strong id="editMemberNameDisplay"></strong> üyesinin spor salonu bilgisini düzenleyebilirsiniz.
                        </p>
                    </div>
                    <div class="form-group-modern">
                        <label class="form-label-modern">Spor Salonu <span class="text-danger">*</span></label>
                        <select id="editGymId" class="form-control-modern" required>
                            <option value="0">Bağlantıyı Kaldır</option>
                            @foreach (var gym in gyms)
                            {
                                <option value="@gym.Id">@gym.Name</option>
                            }
                        </select>
                        <small class="text-muted">Üyenin bağlı olduğu spor salonunu seçin veya bağlantıyı kaldırın.</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="updateMember()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showMemberDetails(memberId) {
        const modal = new bootstrap.Modal(document.getElementById('memberDetailsModal'));
        const contentDiv = document.getElementById('memberDetailsContent');
        
        // Loading göster
        contentDiv.innerHTML = '<div class="text-center py-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Yükleniyor...</span></div></div>';
        modal.show();
        
        // AJAX ile detayları getir
        fetch('@Url.Action("MemberDetails", "Admin")?id=' + memberId)
            .then(response => response.json())
            .then(data => {
                if (data.success && data.member) {
                    const member = data.member;
                    let html = `
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-primary mb-3"><i class="bi bi-person"></i> Kişisel Bilgiler</h6>
                                <table class="table table-borderless">
                                    <tr>
                                        <th style="width: 40%;">Ad Soyad:</th>
                                        <td><strong>${member.fullName}</strong></td>
                                    </tr>
                                    <tr>
                                        <th>E-posta:</th>
                                        <td>${member.email}</td>
                                    </tr>
                                    <tr>
                                        <th>Telefon:</th>
                                        <td>${member.phone}</td>
                                    </tr>
                                    <tr>
                                        <th>Doğum Tarihi:</th>
                                        <td>${member.dateOfBirth}</td>
                                    </tr>
                                    <tr>
                                        <th>Cinsiyet:</th>
                                        <td>${member.gender}</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-primary mb-3"><i class="bi bi-activity"></i> Fiziksel Bilgiler</h6>
                                <table class="table table-borderless">
                                    <tr>
                                        <th style="width: 40%;">Boy:</th>
                                        <td>${member.height} cm</td>
                                    </tr>
                                    <tr>
                                        <th>Kilo:</th>
                                        <td>${member.weight} kg</td>
                                    </tr>
                                    <tr>
                                        <th>Vücut Tipi:</th>
                                        <td>${member.bodyType}</td>
                                    </tr>
                                    <tr>
                                        <th>Sağlık Durumu:</th>
                                        <td>${member.healthConditions}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-12">
                                <h6 class="text-primary mb-3"><i class="bi bi-info-circle"></i> Diğer Bilgiler</h6>
                                <table class="table table-borderless">
                                    <tr>
                                        <th style="width: 20%;">Spor Salonu:</th>
                                        <td><span class="badge bg-primary">${member.gymName}</span></td>
                                    </tr>
                                    <tr>
                                        <th>Randevu Sayısı:</th>
                                        <td><span class="badge bg-info">${member.appointmentCount}</span></td>
                                    </tr>
                                    <tr>
                                        <th>Beslenme Programı:</th>
                                        <td><span class="badge bg-success">${member.nutritionPlanCount}</span></td>
                                    </tr>
                                    <tr>
                                        <th>Oluşturulma:</th>
                                        <td>${member.createdDate}</td>
                                    </tr>
                                    <tr>
                                        <th>Güncellenme:</th>
                                        <td>${member.updatedDate}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    `;
                    contentDiv.innerHTML = html;
                } else {
                    contentDiv.innerHTML = '<div class="alert alert-danger">Üye bilgileri yüklenirken bir hata oluştu.</div>';
                }
            })
            .catch(error => {
                console.error('Error:', error);
                contentDiv.innerHTML = '<div class="alert alert-danger">Bir hata oluştu. Lütfen tekrar deneyin.</div>';
            });
    }

    document.addEventListener('DOMContentLoaded', function() {
        const editModal = document.getElementById('editMemberModal');
        if (editModal) {
            editModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const memberId = button.getAttribute('data-member-id');
                const memberName = button.getAttribute('data-member-name');
                const currentGymId = button.getAttribute('data-current-gym-id');
                
                document.getElementById('editMemberId').value = memberId;
                document.getElementById('editMemberNameDisplay').textContent = memberName;
                document.getElementById('editGymId').value = currentGymId || '0';
            });
        }
    });

    function updateMember() {
        const memberId = document.getElementById('editMemberId').value;
        const gymId = document.getElementById('editGymId').value;

        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
        
        fetch('@Url.Action("UpdateMemberGym", "Admin")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': token
            },
            body: new URLSearchParams({
                memberId: memberId,
                gymId: gymId || '0'
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const modal = bootstrap.Modal.getInstance(document.getElementById('editMemberModal'));
                modal.hide();
                location.reload();
            } else {
                alert(data.message || 'Üye güncellenirken bir hata oluştu.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Bir hata oluştu.');
        });
    }
</script>

