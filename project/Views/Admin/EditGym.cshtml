@model proje.Models.Gym
@{
    ViewData["Title"] = "Spor Salonu Düzenle";
    Layout = "_Layout";
    var services = ViewBag.Services as IEnumerable<proje.Models.Service> ?? new List<proje.Models.Service>();
}

<div class="auth-page-modern">
    <div class="auth-stars-background"></div>
    <div class="auth-container-modern" style="max-width: 1200px;">
        <div class="auth-card-modern admin-dashboard-card">
            <div class="auth-header-modern">
                <h2 class="auth-title-modern">Spor Salonu Düzenle</h2>
                <p class="auth-subtitle-modern">Spor salonu bilgilerini ve hizmetlerini yönetin</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-controller="Gyms" asp-action="Edit" method="post" class="auth-form-modern" id="editGymForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group-modern">
                    <label asp-for="Name" class="form-label-modern">Spor Salonu Adı</label>
                    <input asp-for="Name" class="form-control-modern" placeholder="Örn: sar3bucuk Spor Salonu" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Address" class="form-label-modern">Adres</label>
                    <input asp-for="Address" class="form-control-modern" placeholder="Örn: Örnek Mahallesi, Spor Caddesi No:123" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-modern">
                            <label asp-for="Phone" class="form-label-modern">Telefon</label>
                            <input asp-for="Phone" class="form-control-modern" placeholder="Örn: 0264 123 45 67" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-modern">
                            <label asp-for="Email" class="form-label-modern">E-posta</label>
                            <input asp-for="Email" type="email" class="form-control-modern" placeholder="Örn: info@sar3bucuk.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-modern">
                            <label asp-for="OpeningTime" class="form-label-modern">Açılış Saati</label>
                            <input asp-for="OpeningTime" type="time" class="form-control-modern" />
                            <span asp-validation-for="OpeningTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-modern">
                            <label asp-for="ClosingTime" class="form-label-modern">Kapanış Saati</label>
                            <input asp-for="ClosingTime" type="time" class="form-control-modern" />
                            <span asp-validation-for="ClosingTime" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group-modern">
                    <label class="form-label-modern">Çalışma Günleri</label>
                    <div class="working-days-container">
                        @{
                            var dayNames = new[] { "Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi" };
                            var selectedDays = Model?.WorkingDaysList ?? new List<int>();
                        }
                        @for (int i = 0; i < dayNames.Length; i++)
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input working-day-checkbox" type="checkbox" name="SelectedDays" value="@i" id="day@i" 
                                       @(selectedDays.Contains(i) ? "checked" : "") />
                                <label class="form-check-label" for="day@i">@dayNames[i]</label>
                            </div>
                        }
                    </div>
                    <input type="hidden" asp-for="WorkingDays" id="WorkingDays" />
                    <span asp-validation-for="WorkingDays" class="text-danger"></span>
                </div>

                <div class="form-group-modern form-check-modern">
                    <input asp-for="IsActive" class="form-check-input-modern" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label-modern">Aktif</label>
                </div>

                <div class="form-actions-modern">
                    <a href="@Url.Action("Index", "Gyms")" class="btn-auth-modern btn-secondary-modern">İptal</a>
                    <button type="submit" class="btn-auth-modern">Güncelle</button>
                </div>
            </form>

            <!-- Hizmet Yönetimi Bölümü -->
            <div class="services-section">
                <div class="services-header">
                    <h3>Hizmetler</h3>
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addServiceModal">
                        <span>+</span> Yeni Hizmet Ekle
                    </button>
                </div>

                <div class="services-list">
                    @if (Model.GymServices != null && Model.GymServices.Any())
                    {
                        @foreach (var gymService in Model.GymServices)
                        {
                            <div class="service-item" data-gym-service-id="@gymService.Id">
                                <div class="service-info">
                                    <h5>@gymService.Service?.Name</h5>
                                    <div class="service-details">
                                        <span><strong>Süre:</strong> @gymService.Duration dakika</span>
                                        <span><strong>Ücret:</strong> @gymService.Price.ToString("C")</span>
                                        <span>
                                            <strong>Durum:</strong> 
                                            @if (gymService.IsActive)
                                            {
                                                <span class="service-status-badge service-status-active">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="service-status-badge service-status-inactive">Pasif</span>
                                            }
                                        </span>
                                    </div>
                                </div>
                                <div class="service-actions">
                                    <button type="button" class="btn btn-sm btn-outline-primary" 
                                            data-gym-service-id="@gymService.Id"
                                            data-service-id="@gymService.ServiceId"
                                            data-service-name="@(gymService.Service?.Name ?? "")"
                                            data-duration="@gymService.Duration"
                                            data-price="@gymService.Price.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                            data-is-active="@gymService.IsActive.ToString().ToLower()"
                                            onclick="editGymService(this)">
                                        Düzenle
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteServiceModal"
                                            data-gym-service-id="@gymService.Id"
                                            data-service-name="@(gymService.Service?.Name ?? "")">
                                        Sil
                                    </button>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Henüz hizmet eklenmemiş.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hizmet Ekleme Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1" aria-labelledby="addServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addServiceModalLabel">Yeni Hizmet Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addServiceForm">
                    <input type="hidden" id="gymId" value="@Model.Id" />
                    <div class="form-group-modern">
                        <label class="form-label-modern">Hizmet</label>
                        <select id="serviceId" class="form-control-modern" required>
                            <option value="">Hizmet Seçin</option>
                            @foreach (var service in services)
                            {
                                <option value="@service.Id">@service.Name</option>
                            }
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="form-label-modern">Süre (Dakika)</label>
                                <input type="number" id="duration" class="form-control-modern" min="1" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="form-label-modern">Ücret (₺)</label>
                                <input type="number" id="price" class="form-control-modern" step="0.01" min="0" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group-modern form-check-modern">
                        <input type="checkbox" id="isActive" class="form-check-input-modern" checked />
                        <label class="form-check-label-modern" for="isActive">Aktif</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="addGymService()">Ekle</button>
            </div>
        </div>
    </div>
</div>

<!-- Hizmet Düzenleme Modal -->
<div class="modal fade" id="editServiceModal" tabindex="-1" aria-labelledby="editServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editServiceModalLabel">Hizmet Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editServiceForm">
                    <input type="hidden" id="editGymServiceId" />
                    <div class="form-group-modern">
                        <label class="form-label-modern">Hizmet</label>
                        <input type="text" id="editServiceName" class="form-control-modern" readonly />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="form-label-modern">Süre (Dakika)</label>
                                <input type="number" id="editDuration" class="form-control-modern" min="1" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="form-label-modern">Ücret (₺)</label>
                                <input type="number" id="editPrice" class="form-control-modern" step="0.01" min="0" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group-modern form-check-modern">
                        <input type="checkbox" id="editIsActive" class="form-check-input-modern" />
                        <label class="form-check-label-modern" for="editIsActive">Aktif</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="updateGymService()">Güncelle</button>
            </div>
        </div>
    </div>
</div>

<!-- Hizmet Silme Onay Modal -->
<div class="modal fade" id="deleteServiceModal" tabindex="-1" aria-labelledby="deleteServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); color: white; border-bottom: none;">
                <h5 class="modal-title" id="deleteServiceModalLabel">
                    <span style="font-size: 1.5rem;">⚠️</span> Hizmet Sil
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <strong>Uyarı!</strong> Bu işlem geri alınamaz. Hizmet ve tüm ilişkili randevular silinecektir.
                </div>

                <div class="delete-info-modal">
                    <p style="margin: 0; color: #1e293b; font-weight: 600;">
                        <strong>"<span id="deleteServiceName"></span>"</strong> hizmetini silmek istediğinizden emin misiniz?
                    </p>
                </div>

                <input type="hidden" id="deleteGymServiceId" />
            </div>
            <div class="modal-footer" style="border-top: none;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteGymService()">Evet, Sil</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function addGymService() {
            const gymId = document.getElementById('gymId').value;
            const serviceId = document.getElementById('serviceId').value;
            const duration = document.getElementById('duration').value;
            const priceInput = document.getElementById('price').value.replace(',', '.');
            const price = parseFloat(priceInput);
            const isActive = document.getElementById('isActive').checked;

            if (!serviceId || !duration || !price || isNaN(price)) {
                alert('Lütfen tüm alanları doğru şekilde doldurun.');
                return;
            }

            const priceFormatted = price.toFixed(2).replace(',', '.');

            const token = document.querySelector('#editGymForm input[name="__RequestVerificationToken"]')?.value || 
                         document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            
            fetch('@Url.Action("AddGymService", "Gyms")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    gymId: gymId,
                    serviceId: serviceId,
                    duration: duration,
                    price: priceFormatted,
                    isActive: isActive
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Hizmet eklenirken bir hata oluştu.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu.');
            });
        }

        function editGymService(button) {
            const id = button.getAttribute('data-gym-service-id');
            const serviceId = button.getAttribute('data-service-id');
            const serviceName = button.getAttribute('data-service-name');
            const duration = button.getAttribute('data-duration');
            const price = parseFloat(button.getAttribute('data-price'));
            const isActive = button.getAttribute('data-is-active') === 'true';
            
            document.getElementById('editGymServiceId').value = id;
            document.getElementById('editServiceName').value = serviceName;
            document.getElementById('editDuration').value = duration;
            document.getElementById('editPrice').value = price.toFixed(2);
            document.getElementById('editIsActive').checked = isActive;
            
            const modal = new bootstrap.Modal(document.getElementById('editServiceModal'));
            modal.show();
        }

        function updateGymService() {
            const id = document.getElementById('editGymServiceId').value;
            const duration = parseInt(document.getElementById('editDuration').value);
            const priceInput = document.getElementById('editPrice').value.replace(',', '.');
            const price = parseFloat(priceInput);
            const isActive = document.getElementById('editIsActive').checked;

            if (!duration || isNaN(duration) || !price || isNaN(price)) {
                alert('Lütfen tüm alanları doğru şekilde doldurun.');
                return;
            }

            const priceFormatted = price.toFixed(2).replace(',', '.');

            const token = document.querySelector('#editGymForm input[name="__RequestVerificationToken"]')?.value || 
                         document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            
            fetch('@Url.Action("UpdateGymService", "Gyms")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    id: id,
                    duration: duration,
                    price: priceFormatted,
                    isActive: isActive
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Hizmet güncellenirken bir hata oluştu.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu.');
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            const deleteModal = document.getElementById('deleteServiceModal');
            if (deleteModal) {
                deleteModal.addEventListener('show.bs.modal', function(event) {
                    const button = event.relatedTarget;
                    const gymServiceId = button.getAttribute('data-gym-service-id');
                    const serviceName = button.getAttribute('data-service-name');
                    
                    document.getElementById('deleteGymServiceId').value = gymServiceId;
                    document.getElementById('deleteServiceName').textContent = serviceName;
                });
            }
        });

        // Çalışma günleri checkbox'larını güncelle
        document.addEventListener('DOMContentLoaded', function() {
            const checkboxes = document.querySelectorAll('.working-day-checkbox');
            const hiddenInput = document.getElementById('WorkingDays');
            
            if (!hiddenInput || !checkboxes.length) return;
            
            function updateWorkingDays() {
                const selectedDays = Array.from(checkboxes)
                    .filter(cb => cb.checked)
                    .map(cb => parseInt(cb.value))
                    .sort((a, b) => a - b);
                
                hiddenInput.value = selectedDays.length > 0 ? selectedDays.join(',') : '';
            }
            
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateWorkingDays);
            });
            
            // İlk yüklemede de güncelle
            updateWorkingDays();
        });

        function confirmDeleteGymService() {
            const id = document.getElementById('deleteGymServiceId').value;

            const token = document.querySelector('#editGymForm input[name="__RequestVerificationToken"]')?.value || 
                         document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            
            fetch('@Url.Action("DeleteGymService", "Gyms")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    id: id
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('deleteServiceModal'));
                    modal.hide();
                    location.reload();
                } else {
                    alert(data.message || 'Hizmet silinirken bir hata oluştu.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu.');
            });
        }
    </script>
}

