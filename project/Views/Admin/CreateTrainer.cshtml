@model proje.Models.Trainer
@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
    Layout = "_Layout";
    var gyms = ViewBag.Gyms as IEnumerable<proje.Models.Gym> ?? new List<proje.Models.Gym>();
}

<div class="auth-page-modern">
    <div class="auth-stars-background"></div>
    <div class="auth-container-modern">
        <div class="auth-card-modern">
            <div class="auth-header-modern">
                <h2 class="auth-title-modern">Yeni Antrenör Ekle</h2>
                <p class="auth-subtitle-modern">Sisteme yeni bir antrenör ekleyin</p>
            </div>

            <form asp-action="CreateTrainer" method="post" class="auth-form-modern">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group-modern">
                    <label class="form-label-modern">E-posta <span class="text-danger">*</span></label>
                    <input type="email" name="email" class="form-control-modern" placeholder="Örn: trainer@example.com" required autocomplete="off" />
                    <small class="text-muted">Giriş ve iletişim için kullanılacak e-posta adresi</small>
                </div>

                <div class="form-group-modern">
                    <label class="form-label-modern">Şifre (Yeni kullanıcı için)</label>
                    <input type="password" name="password" class="form-control-modern" placeholder="Yeni kullanıcı oluşturuluyorsa şifre girin" autocomplete="new-password" />
                    <small class="text-muted">Mevcut kullanıcı için boş bırakın</small>
                </div>

                <div class="form-group-modern">
                    <label asp-for="FirstName" class="form-label-modern">Ad</label>
                    <input asp-for="FirstName" class="form-control-modern" placeholder="Örn: Ahmet" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="LastName" class="form-label-modern">Soyad</label>
                    <input asp-for="LastName" class="form-control-modern" placeholder="Örn: Yılmaz" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Phone" class="form-label-modern">Telefon</label>
                    <input asp-for="Phone" class="form-control-modern" placeholder="Örn: 0264 123 45 67" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <label asp-for="GymId" class="form-label-modern">Spor Salonu</label>
                    <select asp-for="GymId" class="form-control-modern" asp-items="@(new SelectList(gyms, "Id", "Name"))">
                        <option value="">Spor Salonu Seçin (Opsiyonel)</option>
                    </select>
                    <small class="text-muted">Spor salonu seçimi opsiyoneldir, daha sonra atanabilir.</small>
                    <span asp-validation-for="GymId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-modern">
                            <label asp-for="ExperienceYears" class="form-label-modern">Deneyim Yılı</label>
                            <input asp-for="ExperienceYears" type="number" class="form-control-modern" min="0" />
                            <span asp-validation-for="ExperienceYears" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-modern form-check-modern" style="margin-top: 2rem;">
                            <input asp-for="IsActive" class="form-check-input-modern" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label-modern">Aktif</label>
                        </div>
                    </div>
                </div>

                <div class="form-group-modern">
                    <label asp-for="Bio" class="form-label-modern">Biyografi</label>
                    <textarea asp-for="Bio" class="form-control-modern" rows="4" placeholder="Antrenör hakkında bilgi yazın..."></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-actions-modern">
                    <a href="@Url.Action("Trainers", "Admin")" class="btn-auth-modern btn-secondary-modern">İptal</a>
                    <button type="submit" class="btn-auth-modern">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .form-actions-modern {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(226, 232, 240, 0.3);
    }

    .btn-secondary-modern {
        background: #64748b;
        color: white;
        text-decoration: none;
    }

    .btn-secondary-modern:hover {
        background: #475569;
        color: white;
        text-decoration: none;
    }

    textarea.form-control-modern {
        resize: vertical;
        min-height: 100px;
    }

    .text-muted {
        color: #64748b;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

