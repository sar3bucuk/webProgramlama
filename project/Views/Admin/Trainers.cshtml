@model IEnumerable<proje.Models.Trainer>
@{
    ViewData["Title"] = "Antren√∂rler Y√∂netimi";
    Layout = "_Layout";
    var gyms = ViewBag.Gyms as IEnumerable<proje.Models.Gym> ?? new List<proje.Models.Gym>();
}

<div class="auth-page-modern">
    <div class="auth-stars-background"></div>
    <div class="auth-container-modern" style="max-width: 1400px;">
        <div class="auth-card-modern admin-dashboard-card">
            <div class="admin-content-full">
                <div class="admin-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2>Antren√∂rler</h2>
                            <p class="text-muted">Antren√∂rleri y√∂netin ve bilgilerini d√ºzenleyin</p>
                        </div>
                        <a href="@Url.Action("CreateTrainer", "Admin")" class="btn btn-primary">
                            <span>+</span> Yeni Antren√∂r Ekle
                        </a>
                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="trainers-table-card">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>E-posta</th>
                                <th>Telefon</th>
                                <th>Spor Salonu</th>
                                <th>Hizmetler</th>
                                <th>Deneyim</th>
                                <th>Durum</th>
                                <th>ƒ∞≈ülemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var trainer in Model)
                                {
                                    <tr>
                                        <td><strong style="color: #1e293b;">@trainer.FullName</strong></td>
                                        <td style="color: #64748b;">@(trainer.User?.Email ?? trainer.Email ?? "-")</td>
                                        <td style="color: #64748b;">@(trainer.Phone ?? "-")</td>
                                        <td>
                                            @if (trainer.Gym != null)
                                            {
                                                <span class="trainer-gym-badge">@trainer.Gym.Name</span>
                                            }
                                            else
                                            {
                                                <span style="color: #64748b; font-size: 0.875rem;">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (trainer.TrainerServices != null && trainer.TrainerServices.Any())
                                            {
                                                <div class="trainer-services-list">
                                                    @foreach (var ts in trainer.TrainerServices.Take(3))
                                                    {
                                                        <span class="service-badge">@ts.Service?.Name</span>
                                                    }
                                                    @if (trainer.TrainerServices.Count > 3)
                                                    {
                                                        <span class="service-badge">+@(trainer.TrainerServices.Count - 3)</span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span style="color: #64748b; font-size: 0.875rem;">Hizmet yok</span>
                                            }
                                        </td>
                                        <td style="color: #64748b;">@trainer.ExperienceYears yƒ±l</td>
                                        <td>
                                            @if (trainer.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a href="@Url.Action("EditTrainer", "Admin", new { id = trainer.Id })" class="btn btn-sm btn-outline-primary">
                                                    D√ºzenle
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteTrainerModal"
                                                        data-trainer-id="@trainer.Id"
                                                        data-trainer-name="@trainer.FullName"
                                                        data-trainer-email="@(trainer.User?.Email ?? trainer.Email ?? "-")"
                                                        data-trainer-gym="@(trainer.Gym?.Name ?? "-")">
                                                    Sil
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">
                                        Hen√ºz antren√∂r bulunmamaktadƒ±r.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-content-full {
        width: 100%;
    }

    .admin-header h2 {
        color: var(--text-dark);
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .admin-header .text-muted {
        color: var(--text-light);
    }

    .trainers-table-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(226, 232, 240, 0.8);
        margin-top: 2rem;
    }

    .table thead th {
        border-bottom: 2px solid rgba(226, 232, 240, 0.8);
        color: #64748b;
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        background: #f8f9fa;
    }

    .table tbody tr {
        transition: background 0.2s;
        color: #1e293b;
    }

