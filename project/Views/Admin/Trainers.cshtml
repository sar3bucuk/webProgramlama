@model IEnumerable<proje.Models.Trainer>
@{
    ViewData["Title"] = "Antrenörler Yönetimi";
    Layout = "_Layout";
    var gyms = ViewBag.Gyms as IEnumerable<proje.Models.Gym> ?? new List<proje.Models.Gym>();
}

<div class="auth-page-modern">
    <div class="auth-stars-background"></div>
    <div class="auth-container-modern" style="max-width: 1400px;">
        <div class="auth-card-modern admin-dashboard-card">
            <div class="admin-content-full">
                <div class="admin-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2>Antrenörler</h2>
                            <p class="text-muted">Antrenörleri yönetin ve bilgilerini düzenleyin</p>
                        </div>
                        <a href="@Url.Action("CreateTrainer", "Admin")" class="btn btn-primary">
                            <span>+</span> Yeni Antrenör Ekle
                        </a>
                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Filtreleme ve Arama Formu -->
                <div class="trainers-filter-card">
                    <form method="get" action="@Url.Action("Trainers", "Admin")" class="filter-form">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label class="form-label-modern">İsme Göre Ara</label>
                                <input type="text" name="searchName" class="form-control-modern" 
                                       value="@ViewBag.SearchName" 
                                       placeholder="Ad veya soyad ile ara...">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label-modern">Spor Salonuna Göre Filtrele</label>
                                <select name="gymId" class="form-control-modern">
                                    <option value="">Tümü</option>
                                    @{
                                        var selectedGymId = ViewBag.SelectedGymId?.ToString();
                                    }
                                    @if (selectedGymId == "0")
                                    {
                                        <option value="0" selected>Bağlı Değil</option>
                                    }
                                    else
                                    {
                                        <option value="0">Bağlı Değil</option>
                                    }
                                    @foreach (var gym in gyms)
                                    {
                                        @if (selectedGymId == gym.Id.ToString())
                                        {
                                            <option value="@gym.Id" selected>@gym.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@gym.Id">@gym.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label-modern">Hizmete Göre Filtrele</label>
                                <select name="serviceId" class="form-control-modern">
                                    <option value="">Tümü</option>
                                    @{
                                        var services = ViewBag.Services as IEnumerable<proje.Models.Service> ?? new List<proje.Models.Service>();
                                        var selectedServiceId = ViewBag.SelectedServiceId?.ToString();
                                    }
                                    @foreach (var service in services)
                                    {
                                        @if (selectedServiceId == service.Id.ToString())
                                        {
                                            <option value="@service.Id" selected>@service.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@service.Id">@service.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-primary w-100" style="height: 42px;">Filtrele</button>
                            </div>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(ViewBag.SearchName?.ToString()) || (ViewBag.SelectedGymId != null) || (ViewBag.SelectedServiceId != null))
                        {
                            <div class="mt-2">
                                <a href="@Url.Action("Trainers", "Admin")" class="btn btn-sm btn-outline-secondary">Filtreleri Temizle</a>
                            </div>
                        }
                    </form>
                </div>

                <div class="trainers-table-card">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>E-posta</th>
                                <th>Telefon</th>
                                <th>Spor Salonu</th>
                                <th>Hizmetler</th>
                                <th>Deneyim</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var trainer in Model)
                                {
                                    <tr>
                                        <td><strong style="color: #1e293b;">@trainer.FullName</strong></td>
                                        <td style="color: #64748b;">@(trainer.User?.Email ?? trainer.Email ?? "-")</td>
                                        <td style="color: #64748b;">@(trainer.Phone ?? "-")</td>
                                        <td>
                                            @if (trainer.Gym != null)
                                            {
                                                <span class="trainer-gym-badge">@trainer.Gym.Name</span>
                                            }
                                            else
                                            {
                                                <span style="color: #64748b; font-size: 0.875rem;">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (trainer.TrainerServices != null && trainer.TrainerServices.Any())
                                            {
                                                <div class="trainer-services-list">
                                                    @foreach (var ts in trainer.TrainerServices.Take(3))
                                                    {
                                                        <span class="service-badge">@ts.Service?.Name</span>
                                                    }
                                                    @if (trainer.TrainerServices.Count > 3)
                                                    {
                                                        <span class="service-badge">+@(trainer.TrainerServices.Count - 3)</span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span style="color: #64748b; font-size: 0.875rem;">Hizmet yok</span>
                                            }
                                        </td>
                                        <td style="color: #64748b;">@trainer.ExperienceYears yıl</td>
                                        <td>
                                            @if (trainer.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a href="@Url.Action("EditTrainer", "Admin", new { id = trainer.Id })" class="btn btn-sm btn-outline-primary">
                                                    Düzenle
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteTrainerModal"
                                                        data-trainer-id="@trainer.Id"
                                                        data-trainer-name="@trainer.FullName"
                                                        data-trainer-email="@(trainer.User?.Email ?? trainer.Email ?? "-")"
                                                        data-trainer-gym="@(trainer.Gym?.Name ?? "-")">
                                                    Sil
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">
                                        Henüz antrenör bulunmamaktadır.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-content-full {
        width: 100%;
    }

    .admin-header h2 {
        color: var(--text-dark);
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .admin-header .text-muted {
        color: var(--text-light);
    }

    .trainers-table-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(226, 232, 240, 0.8);
        margin-top: 2rem;
    }

    .table thead th {
        border-bottom: 2px solid rgba(226, 232, 240, 0.8);
        color: #64748b;
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        background: #f8f9fa;
    }

    .table tbody tr {
        transition: background 0.2s;
        color: #1e293b;
    }

    .table tbody tr:hover {
        background: rgba(59, 130, 246, 0.05);
    }

    .trainer-gym-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 8px;
        background: rgba(59, 130, 246, 0.1);
        color: #3b82f6;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .trainer-services-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .service-badge {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
        background: rgba(34, 197, 94, 0.1);
        color: #16a34a;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .trainers-filter-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(226, 232, 240, 0.8);
        margin-top: 2rem;
        margin-bottom: 1rem;
    }

    .filter-form .form-label-modern {
        font-size: 0.875rem;
        font-weight: 600;
        color: #64748b;
        margin-bottom: 0.5rem;
    }

    .filter-form .form-control-modern {
        border: 1px solid rgba(226, 232, 240, 0.8);
        border-radius: 8px;
        padding: 0.625rem 1rem;
        font-size: 0.875rem;
    }

    .filter-form .form-control-modern:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    /* Silme Onay Modal Stilleri */
    .cancel-confirm-modal {
        border: none;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
        overflow: hidden;
    }

    .cancel-confirm-modal .modal-body {
        padding: 2rem;
        text-align: center;
    }

    .cancel-confirm-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: pulse 2s infinite;
    }

    .cancel-confirm-icon i {
        font-size: 2.5rem;
        color: #dc2626;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
    }

    .cancel-confirm-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 1rem;
    }

    .cancel-confirm-message {
        color: #64748b;
        font-size: 1rem;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .trainer-delete-info {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin: 1.5rem 0 2rem;
        border: 1px solid rgba(226, 232, 240, 0.8);
        text-align: left;
    }

    .info-item-delete {
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(226, 232, 240, 0.6);
        color: #1e293b;
    }

    .info-item-delete:last-child {
        border-bottom: none;
    }

    .info-item-delete strong {
        color: #64748b;
        margin-right: 0.5rem;
        font-weight: 600;
    }

    .cancel-confirm-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .cancel-confirm-actions .btn {
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .cancel-confirm-actions .btn-secondary {
        background: #f1f5f9;
        border: 1px solid #e2e8f0;
        color: #64748b;
    }

    .cancel-confirm-actions .btn-secondary:hover {
        background: #e2e8f0;
        transform: translateY(-2px);
    }

    .cancel-confirm-actions .btn-danger {
        background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
        border: none;
        color: white;
    }

    .cancel-confirm-actions .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.4);
    }
</style>

<!-- Delete Trainer Confirmation Modal -->
<div class="modal fade" id="deleteTrainerModal" tabindex="-1" aria-labelledby="deleteTrainerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content cancel-confirm-modal">
            <div class="modal-body">
                <div class="cancel-confirm-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h5 class="cancel-confirm-title">Antrenörü Silmek İstediğinizden Emin misiniz?</h5>
                <p class="cancel-confirm-message">Bu işlem geri alınamaz. Antrenör ve tüm ilişkili veriler (hizmetler, randevular) silinecektir.</p>
                <div class="trainer-delete-info">
                    <div class="info-item-delete">
                        <strong>Ad Soyad:</strong> <span id="modal-trainer-name"></span>
                    </div>
                    <div class="info-item-delete">
                        <strong>E-posta:</strong> <span id="modal-trainer-email"></span>
                    </div>
                    <div class="info-item-delete">
                        <strong>Spor Salonu:</strong> <span id="modal-trainer-gym"></span>
                    </div>
                </div>
                <form id="deleteTrainerForm" method="post" style="display: none;">
                    @Html.AntiForgeryToken()
                </form>
                <div class="cancel-confirm-actions">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteTrainerBtn">Evet, Sil</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const deleteModal = document.getElementById('deleteTrainerModal');
        const deleteForm = document.getElementById('deleteTrainerForm');
        
        let currentTrainerId = null;
        
        deleteModal.addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;
            currentTrainerId = button.getAttribute('data-trainer-id');
            const trainerName = button.getAttribute('data-trainer-name');
            const trainerEmail = button.getAttribute('data-trainer-email');
            const trainerGym = button.getAttribute('data-trainer-gym');
            
            document.getElementById('modal-trainer-name').textContent = trainerName;
            document.getElementById('modal-trainer-email').textContent = trainerEmail;
            document.getElementById('modal-trainer-gym').textContent = trainerGym;
        });

        document.getElementById('confirmDeleteTrainerBtn').addEventListener('click', function() {
            if (!currentTrainerId) {
                alert('Antrenör ID bulunamadı.');
                return;
            }
            
            const token = document.querySelector('#deleteTrainerForm input[name="__RequestVerificationToken"]')?.value;
            const actionUrl = '@Url.Action("DeleteTrainer", "Admin")?id=' + currentTrainerId;
            
            fetch(actionUrl, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    __RequestVerificationToken: token
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const modal = bootstrap.Modal.getInstance(deleteModal);
                    modal.hide();
                    window.location.reload();
                } else {
                    alert('Hata: ' + (data.message || 'Antrenör silinirken bir hata oluştu.'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Bir hata oluştu. Lütfen tekrar deneyin.');
            });
        });
    });
</script>

