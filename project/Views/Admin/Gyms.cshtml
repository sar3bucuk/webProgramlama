@model IEnumerable<proje.Models.Gym>
@{
    ViewData["Title"] = "Spor Salonları Yönetimi";
    Layout = "_Layout";
}

<div class="auth-page-modern">
    <div class="auth-stars-background"></div>
    <div class="auth-container-modern" style="max-width: 1400px;">
        <div class="auth-card-modern admin-dashboard-card">
            <!-- Main Content -->
            <div class="admin-content-full">
                <div class="admin-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2>Spor Salonları</h2>
                            <p class="text-muted">Spor salonlarını yönetin</p>
                        </div>
                        <a href="@Url.Action("Create", "Gyms")" class="btn btn-primary">
                            <span>+</span> Yeni Spor Salonu Ekle
                        </a>
                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="gyms-table-card">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Adres</th>
                                <th>Telefon</th>
                                <th>E-posta</th>
                                <th>Çalışma Saatleri</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var gym in Model)
                                {
                                    <tr>
                                        <td><strong style="color: #1e293b;">@gym.Name</strong></td>
                                        <td style="color: #64748b;">@(gym.Address ?? "-")</td>
                                        <td style="color: #64748b;">@(gym.Phone ?? "-")</td>
                                        <td style="color: #64748b;">@(gym.Email ?? "-")</td>
                                        <td>@gym.OpeningTime.ToString(@"hh\:mm") - @gym.ClosingTime.ToString(@"hh\:mm")</td>
                                        <td>
                                            @if (gym.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", "Gyms", new { id = gym.Id })" class="btn btn-sm btn-outline-info" title="Detaylar">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", "Gyms", new { id = gym.Id })" class="btn btn-sm btn-outline-primary">
                                                    Düzenle
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" 
                                                        data-gym-id="@gym.Id" 
                                                        data-gym-name="@gym.Name"
                                                        data-gym-address="@(gym.Address ?? "-")"
                                                        data-gym-phone="@(gym.Phone ?? "-")"
                                                        data-gym-email="@(gym.Email ?? "-")"
                                                        data-gym-active="@gym.IsActive">
                                                    Sil
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        Henüz spor salonu eklenmemiş. <a href="@Url.Action("Create", "Gyms")">İlk spor salonunu ekleyin</a>.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content cancel-confirm-modal">
            <div class="modal-body">
                <div class="cancel-confirm-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h5 class="cancel-confirm-title">Spor Salonunu Silmek İstediğinizden Emin misiniz?</h5>
                <p class="cancel-confirm-message">Bu işlem geri alınamaz. Spor salonu ve tüm ilişkili veriler (hizmetler, antrenörler, randevular) silinecektir.</p>
                <div class="gym-delete-info">
                    <div class="info-item-delete">
                        <strong>Ad:</strong> <span id="modal-gym-name"></span>
                    </div>
                    <div class="info-item-delete">
                        <strong>Adres:</strong> <span id="modal-gym-address"></span>
                    </div>
                    <div class="info-item-delete">
                        <strong>Telefon:</strong> <span id="modal-gym-phone"></span>
                    </div>
                    <div class="info-item-delete">
                        <strong>E-posta:</strong> <span id="modal-gym-email"></span>
                    </div>
                    <div class="info-item-delete">
                        <strong>Durum:</strong> <span id="modal-gym-status"></span>
                    </div>
                </div>
                <form id="deleteGymForm" method="post" asp-controller="Gyms" asp-action="Delete" style="display: none;">
                    <input type="hidden" id="modal-gym-id" name="id" />
                    @Html.AntiForgeryToken()
                </form>
                <div class="cancel-confirm-actions">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteGymBtn">Evet, Sil</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const deleteModal = document.getElementById('deleteModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const gymId = button.getAttribute('data-gym-id');
                const gymName = button.getAttribute('data-gym-name');
                const gymAddress = button.getAttribute('data-gym-address');
                const gymPhone = button.getAttribute('data-gym-phone');
                const gymEmail = button.getAttribute('data-gym-email');
                const gymActive = button.getAttribute('data-gym-active') === 'True';

                document.getElementById('modal-gym-id').value = gymId;
                document.getElementById('modal-gym-name').textContent = gymName;
                document.getElementById('modal-gym-address').textContent = gymAddress;
                document.getElementById('modal-gym-phone').textContent = gymPhone;
                document.getElementById('modal-gym-email').textContent = gymEmail;
                
                const statusSpan = document.getElementById('modal-gym-status');
                if (gymActive) {
                    statusSpan.innerHTML = '<span class="badge bg-success">Aktif</span>';
                } else {
                    statusSpan.innerHTML = '<span class="badge bg-secondary">Pasif</span>';
                }
            });
        }

        document.getElementById('confirmDeleteGymBtn').addEventListener('click', function() {
            document.getElementById('deleteGymForm').submit();
        });
    });
</script>

<style>
    .admin-content-full {
        width: 100%;
    }

    .admin-header h2 {
        color: var(--text-dark);
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .admin-header .text-muted {
        color: var(--text-light);
    }

    .gyms-table-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(226, 232, 240, 0.8);
        margin-top: 2rem;
    }

    .table thead th {
        border-bottom: 2px solid rgba(226, 232, 240, 0.8);
        color: #64748b;
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        background: #f8f9fa;
    }

    .table tbody tr {
        transition: background 0.2s;
        color: #1e293b;
    }

    .table tbody tr:hover {
        background: rgba(59, 130, 246, 0.05);
    }

    .btn-group .btn {
        margin: 0 2px;
    }

    /* Silme Onay Modal Stilleri */
    .cancel-confirm-modal {
        border: none;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
        overflow: hidden;
    }

    .cancel-confirm-modal .modal-body {
        padding: 2rem;
        text-align: center;
    }

    .cancel-confirm-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: pulse 2s infinite;
    }

    .cancel-confirm-icon i {
        font-size: 2.5rem;
        color: #dc2626;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
    }

    .cancel-confirm-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 1rem;
    }

    .cancel-confirm-message {
        color: #64748b;
        font-size: 1rem;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .gym-delete-info {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin: 1.5rem 0 2rem;
        border: 1px solid rgba(226, 232, 240, 0.8);
        text-align: left;
    }

    .info-item-delete {
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(226, 232, 240, 0.6);
        color: #1e293b;
    }

    .info-item-delete:last-child {
        border-bottom: none;
    }

    .info-item-delete strong {
        color: #64748b;
        margin-right: 0.5rem;
        font-weight: 600;
    }

    .cancel-confirm-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .cancel-confirm-actions .btn {
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .cancel-confirm-actions .btn-secondary {
        background: #f1f5f9;
        border: 1px solid #e2e8f0;
        color: #64748b;
    }

    .cancel-confirm-actions .btn-secondary:hover {
        background: #e2e8f0;
        transform: translateY(-2px);
    }

    .cancel-confirm-actions .btn-danger {
        background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
        border: none;
        color: white;
    }

    .cancel-confirm-actions .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.4);
    }
</style>

