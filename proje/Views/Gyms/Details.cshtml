@model proje.Models.Gym

@{
    ViewData["Title"] = "Spor Salonu Detayları";
}

<div class="container-fluid px-4 py-3">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="bi bi-building"></i> Spor Salonu Detayları
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Düzenle
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header @(Model.IsActive ? "bg-success" : "bg-secondary") text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle"></i> Genel Bilgiler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-building text-primary me-3 mt-1 fs-5"></i>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">@Html.DisplayNameFor(m => m.Name)</small>
                                        <h6 class="mb-0 text-dark">@Html.DisplayFor(model => model.Name)</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                @await Component.InvokeAsync("StatusBadge", new { isActive = Model.IsActive, iconClass = "bi-toggle-on", badgeSize = "fs-6" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="info-item">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-geo-alt-fill text-primary me-3 mt-1 fs-5"></i>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">@Html.DisplayNameFor(m => m.Address)</small>
                                        <p class="mb-0 text-dark">@Html.DisplayFor(model => model.Address)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-telephone-fill text-primary me-3 mt-1 fs-5"></i>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">@Html.DisplayNameFor(m => m.Phone)</small>
                                        <p class="mb-0 text-dark">@Html.DisplayFor(model => model.Phone)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-envelope-fill text-primary me-3 mt-1 fs-5"></i>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">@Html.DisplayNameFor(m => m.Email)</small>
                                        <p class="mb-0 text-dark">@Html.DisplayFor(model => model.Email)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-clock-fill text-primary me-3 mt-1 fs-5"></i>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">@Html.DisplayNameFor(m => m.OpeningTime)</small>
                                        <p class="mb-0 text-dark">@Model.OpeningTime.ToString(@"hh\:mm")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-clock text-primary me-3 mt-1 fs-5"></i>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">@Html.DisplayNameFor(m => m.ClosingTime)</small>
                                        <p class="mb-0 text-dark">@Model.ClosingTime.ToString(@"hh\:mm")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-calendar-plus text-primary me-3 mt-1 fs-5"></i>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block">@Html.DisplayNameFor(m => m.CreatedDate)</small>
                                        <p class="mb-0 text-dark">@Html.DisplayFor(model => model.CreatedDate)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hizmetler Bölümü -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-check"></i> Hizmetler
                    </h5>
                    <button type="button" class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#addServiceModal">
                        <i class="bi bi-plus-circle"></i> Hizmet Ekle
                    </button>
                </div>
    
                @if (Model.GymServices != null && Model.GymServices.Any())
                {
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="bi bi-list-ul"></i> Hizmet Adı</th>
                                        <th><i class="bi bi-clock"></i> Süre</th>
                                        <th><i class="bi bi-currency-dollar"></i> Ücret</th>
                                        <th><i class="bi bi-toggle-on"></i> Durum</th>
                                        <th class="text-end"><i class="bi bi-gear"></i> İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var gymService in Model.GymServices)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@gymService.Service?.Name</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@gymService.Duration dk</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success">@gymService.Price.ToString("C")</span>
                                            </td>
                                            <td>
                                                <form asp-controller="Gyms" asp-action="ToggleServiceStatus" method="post" style="display: inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@gymService.Id" />
                                                    <button type="submit" class="btn btn-sm @(gymService.IsActive ? "btn-success" : "btn-secondary")">
                                                        @if (gymService.IsActive)
                                                        {
                                                            <i class="bi bi-check-circle"></i> <text>Aktif</text>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-x-circle"></i> <text>Pasif</text>
                                                        }
                                                    </button>
                                                </form>
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editServiceModal" 
                                                            data-service-id="@gymService.Id"
                                                            data-service-name="@gymService.Service?.Name"
                                                            data-duration="@gymService.Duration"
                                                            data-price="@gymService.Price.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                                            data-is-active="@gymService.IsActive.ToString().ToLower()">
                                                        <i class="bi bi-pencil"></i> Düzenle
                                                    </button>
                                                    <a asp-controller="Gyms" asp-action="DeleteService" asp-route-id="@gymService.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bu hizmeti silmek istediğinizden emin misiniz?');">
                                                        <i class="bi bi-trash"></i> Sil
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox fs-1 text-muted"></i>
                        <p class="text-muted mt-3">Bu spor salonuna henüz hizmet eklenmemiş.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Hizmet Ekleme Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1" aria-labelledby="addServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addServiceModalLabel">
                    <i class="bi bi-plus-circle"></i> Hizmet Ekle
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Gyms" asp-action="AddService" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="GymId" value="@Model.Id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="ServiceId" class="form-label">Hizmet</label>
                        <select name="ServiceId" class="form-select" required>
                            <option value="">-- Hizmet Seçin --</option>
                            @if (ViewBag.AvailableServices != null)
                            {
                                @foreach (var service in ViewBag.AvailableServices as IEnumerable<proje.Models.Service> ?? Enumerable.Empty<proje.Models.Service>())
                                {
                                    @if (service != null)
                                    {
                                        <option value="@service.Id">@service.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="Duration" class="form-label">
                            <i class="bi bi-clock text-primary"></i> Süre (Dakika)
                        </label>
                        <input type="number" name="Duration" class="form-control" min="1" required placeholder="Örn: 60" />
                    </div>
                    <div class="mb-3">
                        <label for="Price" class="form-label">
                            <i class="bi bi-currency-dollar text-primary"></i> Ücret
                        </label>
                        <input type="number" name="Price" class="form-control" step="0.01" min="0" required placeholder="Örn: 150.00" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-toggle-on text-primary"></i> Durum
                        </label>
                        <div class="form-check form-switch">
                            <input type="checkbox" name="IsActive" class="form-check-input" id="IsActiveAdd" checked value="true" />
                            <input type="hidden" name="IsActive" value="false" />
                            <label class="form-check-label" for="IsActiveAdd">
                                <span id="statusText">Aktif</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Hizmet Düzenleme Modal -->
<div class="modal fade" id="editServiceModal" tabindex="-1" aria-labelledby="editServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="editServiceModalLabel">
                    <i class="bi bi-pencil-square"></i> Hizmet Düzenle
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Gyms" asp-action="EditService" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="editServiceId" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-list-check text-primary"></i> Hizmet
                        </label>
                        <input type="text" class="form-control" id="editServiceName" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="editDuration" class="form-label">
                            <i class="bi bi-clock text-primary"></i> Süre (Dakika)
                        </label>
                        <input type="number" name="Duration" id="editDuration" class="form-control" min="1" required placeholder="Örn: 60" />
                    </div>
                    <div class="mb-3">
                        <label for="editPrice" class="form-label">
                            <i class="bi bi-currency-dollar text-primary"></i> Ücret
                        </label>
                        <input type="number" name="Price" id="editPrice" class="form-control" step="0.01" min="0" required placeholder="Örn: 150.00" />
                    </div>
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input type="checkbox" name="IsActive" class="form-check-input" id="editIsActive" value="true" />
                            <input type="hidden" name="IsActive" value="false" />
                            <label class="form-check-label" for="editIsActive">
                                Aktif
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-warning">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Hizmet Ekleme Modal - Aktif/Pasif toggle
        const isActiveCheckbox = document.getElementById('IsActiveAdd');
        const statusText = document.getElementById('statusText');
        
        if (isActiveCheckbox && statusText) {
            isActiveCheckbox.addEventListener('change', function() {
                statusText.textContent = this.checked ? 'Aktif' : 'Pasif';
            });
        }

        // Hizmet Düzenleme Modal - Data yükleme
        const editServiceModal = document.getElementById('editServiceModal');
        if (editServiceModal) {
            editServiceModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const serviceId = button.getAttribute('data-service-id');
                const serviceName = button.getAttribute('data-service-name');
                const duration = button.getAttribute('data-duration');
                const price = button.getAttribute('data-price');
                const isActive = button.getAttribute('data-is-active') === 'true';

                // Fiyat değerini parse et (virgül veya nokta olabilir)
                const priceValue = price ? parseFloat(price.replace(',', '.')) : '';

                document.getElementById('editServiceId').value = serviceId || '';
                document.getElementById('editServiceName').value = serviceName || '';
                document.getElementById('editDuration').value = duration || '';
                document.getElementById('editPrice').value = priceValue || '';
                document.getElementById('editIsActive').checked = isActive;
            });
        }
    });
</script>

<style>
    .info-item {
        padding: 1rem;
        border-radius: 8px;
        background-color: #f8f9fa;
        margin-bottom: 0.5rem;
        transition: background-color 0.2s;
    }

    .info-item:hover {
        background-color: #e9ecef;
    }

    .table th {
        font-weight: 600;
    }

    .card-header {
        border-bottom: 2px solid rgba(0,0,0,0.1);
    }
</style>

