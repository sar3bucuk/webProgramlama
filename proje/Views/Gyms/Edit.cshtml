@model proje.Models.Gym

@{
    ViewData["Title"] = "Spor Salonu Düzenle";
}

<div class="container-fluid px-4 py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="bi bi-pencil-square"></i> Spor Salonu Düzenle
        </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Geri Dön
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-building"></i> Spor Salonu Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedDate" />
                        
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="bi bi-building text-primary"></i> @Html.DisplayNameFor(m => m.Name)
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Spor salonu adını giriniz" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Address" class="form-label">
                                    <i class="bi bi-geo-alt-fill text-primary"></i> @Html.DisplayNameFor(m => m.Address)
                                </label>
                                <input asp-for="Address" class="form-control" placeholder="Adres bilgisini giriniz" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">
                                    <i class="bi bi-telephone-fill text-primary"></i> @Html.DisplayNameFor(m => m.Phone)
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="Telefon numarası" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="bi bi-envelope-fill text-primary"></i> @Html.DisplayNameFor(m => m.Email)
                                </label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="OpeningTime" class="form-label">
                                    <i class="bi bi-clock-fill text-primary"></i> @Html.DisplayNameFor(m => m.OpeningTime)
                                </label>
                                <input asp-for="OpeningTime" type="time" class="form-control" />
                                <span asp-validation-for="OpeningTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ClosingTime" class="form-label">
                                    <i class="bi bi-clock text-primary"></i> @Html.DisplayNameFor(m => m.ClosingTime)
                                </label>
                                <input asp-for="ClosingTime" type="time" class="form-control" />
                                <span asp-validation-for="ClosingTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsActive" id="IsActiveSwitch" />
                                    <label class="form-check-label" for="IsActiveSwitch">
                                        @Html.DisplayNameFor(m => m.IsActive)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

