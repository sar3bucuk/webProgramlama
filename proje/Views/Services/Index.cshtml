@model IEnumerable<proje.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container-fluid px-4 py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="bi bi-list-check"></i> Hizmetler
        </h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addServiceModal">
            <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
        </button>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-info-circle"></i> Henüz hizmet eklenmemiş.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm service-card @(item.IsActive ? "border-success" : "border-secondary")" style="transition: transform 0.2s, box-shadow 0.2s;">
                        <div class="card-header d-flex justify-content-between align-items-center @(item.IsActive ? "bg-success text-white" : "bg-secondary text-white")">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-list-check"></i> @Html.DisplayFor(modelItem => item.Name)
                            </h5>
                            @await Component.InvokeAsync("StatusBadge", new { isActive = item.IsActive, iconClass = "bi-check-circle", badgeSize = "", showIcon = false })
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-file-text text-primary me-2 mt-1"></i>
                                    <div>
                                        <small class="text-muted d-block">Açıklama</small>
                                        <p class="mb-0 text-dark">
                                            @if (string.IsNullOrEmpty(item.Description))
                                            {
                                                <span class="text-muted fst-italic">Açıklama yok</span>
                                            }
                                            else
                                            {
                                                @(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar-plus text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Oluşturulma Tarihi</small>
                                        <span class="text-dark">@Html.DisplayFor(modelItem => item.CreatedDate)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#viewServiceModal"
                                        data-service-id="@item.Id"
                                        data-service-name="@item.Name"
                                        data-service-description="@item.Description"
                                        data-service-is-active="@item.IsActive.ToString().ToLower()"
                                        data-service-created-date="@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")">
                                    <i class="bi bi-eye"></i> Detaylar
                                </button>
                                <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editServiceModal"
                                        data-service-id="@item.Id"
                                        data-service-name="@item.Name"
                                        data-service-description="@item.Description"
                                        data-service-is-active="@item.IsActive.ToString().ToLower()"
                                        data-service-created-date="@item.CreatedDate.ToString("yyyy-MM-ddTHH:mm:ss")">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </button>
                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteServiceModal"
                                        data-service-id="@item.Id"
                                        data-service-name="@item.Name">
                                    <i class="bi bi-trash"></i> Sil
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<style>
    .service-card {
        border-radius: 10px;
        overflow: hidden;
    }

    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.15) !important;
    }

    .card-header {
        border-bottom: 2px solid rgba(0,0,0,0.1);
    }

    .card-body {
        min-height: 150px;
    }

    .card-footer {
        padding: 1rem;
    }

    .bi {
        font-size: 1.1rem;
    }

    .info-item {
        padding: 1rem;
        border-radius: 8px;
        background-color: #f8f9fa;
        margin-bottom: 0.5rem;
        transition: background-color 0.2s;
    }

    .info-item:hover {
        background-color: #e9ecef;
    }
</style>

<!-- Hizmet Detayları Modal -->
<div class="modal fade" id="viewServiceModal" tabindex="-1" aria-labelledby="viewServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="viewServiceModalLabel">
                    <i class="bi bi-eye"></i> Hizmet Detayları
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-md-12">
                        <div class="info-item">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-list-check text-primary me-3 mt-1 fs-5"></i>
                                <div class="flex-grow-1">
                                    <small class="text-muted d-block">Hizmet Adı</small>
                                    <h6 class="mb-0 text-dark" id="viewServiceName"></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="info-item">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-file-text text-primary me-3 mt-1 fs-5"></i>
                                <div class="flex-grow-1">
                                    <small class="text-muted d-block">Açıklama</small>
                                    <p class="mb-0 text-dark" id="viewServiceDescription"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <div id="viewServiceStatus"></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-calendar-plus text-primary me-3 mt-1 fs-5"></i>
                                <div class="flex-grow-1">
                                    <small class="text-muted d-block">Oluşturulma Tarihi</small>
                                    <p class="mb-0 text-dark" id="viewServiceCreatedDate"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<!-- Hizmet Düzenleme Modal -->
<div class="modal fade" id="editServiceModal" tabindex="-1" aria-labelledby="editServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="editServiceModalLabel">
                    <i class="bi bi-pencil-square"></i> Hizmet Düzenle
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Services" asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" id="editServiceId" />
                <input type="hidden" name="CreatedDate" id="editServiceCreatedDate" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="editServiceName" class="form-label">
                            <i class="bi bi-list-check text-primary"></i> Hizmet Adı
                        </label>
                        <input type="text" name="Name" id="editServiceName" class="form-control" required placeholder="Hizmet adını giriniz" />
                    </div>
                    <div class="mb-3">
                        <label for="editServiceDescription" class="form-label">
                            <i class="bi bi-file-text text-primary"></i> Açıklama
                        </label>
                        <textarea name="Description" id="editServiceDescription" class="form-control" rows="4" placeholder="Hizmet açıklamasını giriniz"></textarea>
                    </div>
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input type="checkbox" name="IsActive" class="form-check-input" id="editServiceIsActive" value="true" />
                            <input type="hidden" name="IsActive" value="false" />
                            <label class="form-check-label" for="editServiceIsActive">
                                Aktif
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-warning">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Hizmet Ekleme Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1" aria-labelledby="addServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addServiceModalLabel">
                    <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Services" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="addServiceName" class="form-label">
                            <i class="bi bi-list-check text-primary"></i> Hizmet Adı
                        </label>
                        <input type="text" name="Name" id="addServiceName" class="form-control" required placeholder="Hizmet adını giriniz" />
                    </div>
                    <div class="mb-3">
                        <label for="addServiceDescription" class="form-label">
                            <i class="bi bi-file-text text-primary"></i> Açıklama
                        </label>
                        <textarea name="Description" id="addServiceDescription" class="form-control" rows="4" placeholder="Hizmet açıklamasını giriniz"></textarea>
                    </div>
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input type="checkbox" name="IsActive" class="form-check-input" id="addServiceIsActive" checked value="true" />
                            <input type="hidden" name="IsActive" value="false" />
                            <label class="form-check-label" for="addServiceIsActive">
                                Aktif
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Hizmet Detayları Modal - Data yükleme
        const viewServiceModal = document.getElementById('viewServiceModal');
        if (viewServiceModal) {
            viewServiceModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const serviceId = button.getAttribute('data-service-id');
                const serviceName = button.getAttribute('data-service-name');
                const serviceDescription = button.getAttribute('data-service-description') || 'Açıklama yok';
                const isActive = button.getAttribute('data-service-is-active') === 'true';
                const createdDate = button.getAttribute('data-service-created-date');

                document.getElementById('viewServiceName').textContent = serviceName;
                document.getElementById('viewServiceDescription').textContent = serviceDescription;
                document.getElementById('viewServiceCreatedDate').textContent = createdDate;
                
                // Status badge oluştur
                const statusHtml = isActive 
                    ? '<div class="d-flex align-items-center"><i class="bi bi-toggle-on text-success me-2 fs-5"></i><span class="badge bg-success fs-6">Aktif</span></div>'
                    : '<div class="d-flex align-items-center"><i class="bi bi-toggle-on text-secondary me-2 fs-5"></i><span class="badge bg-secondary fs-6">Pasif</span></div>';
                document.getElementById('viewServiceStatus').innerHTML = statusHtml;
            });
        }

        // Hizmet Düzenleme Modal - Data yükleme
        const editServiceModal = document.getElementById('editServiceModal');
        if (editServiceModal) {
            editServiceModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const serviceId = button.getAttribute('data-service-id');
                const serviceName = button.getAttribute('data-service-name');
                const serviceDescription = button.getAttribute('data-service-description') || '';
                const isActive = button.getAttribute('data-service-is-active') === 'true';
                const createdDate = button.getAttribute('data-service-created-date');

                document.getElementById('editServiceId').value = serviceId;
                document.getElementById('editServiceName').value = serviceName;
                document.getElementById('editServiceDescription').value = serviceDescription;
                document.getElementById('editServiceIsActive').checked = isActive;
                if (createdDate) {
                    document.getElementById('editServiceCreatedDate').value = createdDate;
                }
            });
        }

        // Hizmet Silme Modal - Data yükleme
        const deleteServiceModal = document.getElementById('deleteServiceModal');
        if (deleteServiceModal) {
            deleteServiceModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const serviceId = button.getAttribute('data-service-id');
                const serviceName = button.getAttribute('data-service-name');

                document.getElementById('deleteServiceId').value = serviceId;
                document.getElementById('deleteServiceName').textContent = serviceName;
            });
        }
    });
</script>

<!-- Hizmet Silme Modal -->
<div class="modal fade" id="deleteServiceModal" tabindex="-1" aria-labelledby="deleteServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteServiceModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Hizmet Sil
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Services" asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="deleteServiceId" />
                <div class="modal-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle"></i> Bu işlem geri alınamaz!
                    </div>
                    <p>Bu hizmeti silmek istediğinizden emin misiniz?</p>
                    <div class="info-item">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-list-check text-primary me-3 mt-1 fs-5"></i>
                            <div class="flex-grow-1">
                                <small class="text-muted d-block">Hizmet Adı</small>
                                <h6 class="mb-0 text-dark" id="deleteServiceName"></h6>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> Bu hizmet spor salonlarına bağlıysa silinemez.
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

